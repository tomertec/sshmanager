<UserControl x:Class="SshManager.Terminal.Controls.WebTerminalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource ControlFillColorDefaultBrush}"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded"
             SizeChanged="UserControl_SizeChanged"
             PreviewMouseWheel="UserControl_PreviewMouseWheel">
    <Grid>
        <!-- WebView2 Terminal Control -->
        <wv2:WebView2 x:Name="WebViewControl"
                      DefaultBackgroundColor="#1E1E1E" />
    </Grid>
</UserControl>
