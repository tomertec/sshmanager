<UserControl x:Class="SshManager.Terminal.Controls.TerminalStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="24"
             Background="{DynamicResource LayerFillColorDefaultBrush}">
    <Grid>
        <!-- SSH Status Bar (shown for SSH connections) -->
        <Grid x:Name="SshStatusGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" /> <!-- Uptime -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- Latency -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- CPU -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- MEM -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- DISK -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- Server Uptime -->
                <ColumnDefinition Width="*" />    <!-- Spacer -->
                <ColumnDefinition Width="Auto" /> <!-- Upload -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- Download -->
            </Grid.ColumnDefinitions>

            <!-- Uptime -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="&#xE121;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="12" VerticalAlignment="Center" />
                <TextBlock x:Name="UptimeText" Text="00:00:00" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Rectangle Grid.Column="1" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- Latency -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="&#xE839;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="12" VerticalAlignment="Center" />
                <TextBlock x:Name="LatencyText" Text="--ms" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Rectangle Grid.Column="3" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- CPU -->
            <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="CPU:" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
                <TextBlock x:Name="CpuText" Text="--%" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Rectangle Grid.Column="5" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- Memory -->
            <StackPanel Grid.Column="6" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="MEM:" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
                <TextBlock x:Name="MemText" Text="--%" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Rectangle Grid.Column="7" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- Disk -->
            <StackPanel Grid.Column="8" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="DISK:" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
                <TextBlock x:Name="DiskText" Text="--%" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Rectangle Grid.Column="9" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- Server Uptime -->
            <StackPanel Grid.Column="10" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="UP:" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
                <TextBlock x:Name="ServerUptimeText" Text="--" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Spacer -->
            <Border Grid.Column="11" />

            <!-- Upload throughput -->
            <StackPanel Grid.Column="12" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="&#xE898;" FontFamily="Segoe MDL2 Assets" Foreground="#4CAF50" FontSize="12" VerticalAlignment="Center" />
                <TextBlock x:Name="UploadText" Text="0 B/s" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Rectangle Grid.Column="13" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- Download throughput -->
            <StackPanel Grid.Column="14" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" FontSize="12" VerticalAlignment="Center" />
                <TextBlock x:Name="DownloadText" Text="0 B/s" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
        </Grid>

        <!-- Serial Status Bar (shown for Serial connections) -->
        <Grid x:Name="SerialStatusGrid" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" /> <!-- Connection Type Icon -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- Port Name -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- Baud Rate -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- Settings (8N1) -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- Handshake -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- Session Uptime -->
                <ColumnDefinition Width="*" />    <!-- Spacer -->
                <ColumnDefinition Width="Auto" /> <!-- TX (Upload) -->
                <ColumnDefinition Width="Auto" /> <!-- Separator -->
                <ColumnDefinition Width="Auto" /> <!-- RX (Download) -->
            </Grid.ColumnDefinitions>

            <!-- Connection Type Icon (Serial/USB) -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="&#xE88E;" FontFamily="Segoe MDL2 Assets" Foreground="#FF9800" FontSize="12" VerticalAlignment="Center" ToolTip="Serial Connection" />
                <TextBlock Text="SERIAL" Foreground="#FF9800" FontSize="11" FontFamily="Consolas" FontWeight="SemiBold" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Rectangle Grid.Column="1" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- Port Name -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="PORT:" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
                <TextBlock x:Name="SerialPortText" Text="COM1" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Rectangle Grid.Column="3" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- Baud Rate -->
            <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="BAUD:" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
                <TextBlock x:Name="SerialBaudText" Text="9600" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Rectangle Grid.Column="5" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- Settings (Data bits, Parity, Stop bits) -->
            <StackPanel Grid.Column="6" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="CFG:" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
                <TextBlock x:Name="SerialSettingsText" Text="8N1" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" ToolTip="Data bits, Parity, Stop bits" />
            </StackPanel>

            <Rectangle Grid.Column="7" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- Handshake -->
            <StackPanel Grid.Column="8" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="FLOW:" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
                <TextBlock x:Name="SerialHandshakeText" Text="None" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" ToolTip="Flow control / Handshake" />
            </StackPanel>

            <Rectangle Grid.Column="9" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- Session Uptime -->
            <StackPanel Grid.Column="10" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="&#xE121;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="12" VerticalAlignment="Center" />
                <TextBlock x:Name="SerialUptimeText" Text="00:00:00" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Spacer -->
            <Border Grid.Column="11" />

            <!-- TX (Upload/Sent) throughput -->
            <StackPanel Grid.Column="12" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="TX" Foreground="#4CAF50" FontSize="11" FontFamily="Consolas" FontWeight="SemiBold" VerticalAlignment="Center" />
                <TextBlock x:Name="SerialTxText" Text="0 B/s" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <Rectangle Grid.Column="13" Width="1" Fill="{DynamicResource ControlStrokeColorSecondaryBrush}" Margin="0,4" />

            <!-- RX (Download/Received) throughput -->
            <StackPanel Grid.Column="14" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
                <TextBlock Text="RX" Foreground="#2196F3" FontSize="11" FontFamily="Consolas" FontWeight="SemiBold" VerticalAlignment="Center" />
                <TextBlock x:Name="SerialRxText" Text="0 B/s" Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
