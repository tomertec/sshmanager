<UserControl x:Class="SshManager.Terminal.Controls.TerminalStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="24"
             Background="#1A1A1A">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" /> <!-- Uptime -->
            <ColumnDefinition Width="Auto" /> <!-- Separator -->
            <ColumnDefinition Width="Auto" /> <!-- Latency -->
            <ColumnDefinition Width="Auto" /> <!-- Separator -->
            <ColumnDefinition Width="Auto" /> <!-- CPU -->
            <ColumnDefinition Width="Auto" /> <!-- Separator -->
            <ColumnDefinition Width="Auto" /> <!-- MEM -->
            <ColumnDefinition Width="Auto" /> <!-- Separator -->
            <ColumnDefinition Width="Auto" /> <!-- DISK -->
            <ColumnDefinition Width="Auto" /> <!-- Separator -->
            <ColumnDefinition Width="Auto" /> <!-- Server Uptime -->
            <ColumnDefinition Width="*" />    <!-- Spacer -->
            <ColumnDefinition Width="Auto" /> <!-- Upload -->
            <ColumnDefinition Width="Auto" /> <!-- Separator -->
            <ColumnDefinition Width="Auto" /> <!-- Download -->
        </Grid.ColumnDefinitions>

        <!-- Uptime -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
            <TextBlock Text="&#xE121;" FontFamily="Segoe MDL2 Assets" Foreground="#888888" FontSize="12" VerticalAlignment="Center" />
            <TextBlock x:Name="UptimeText" Text="00:00:00" Foreground="#CCCCCC" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
        </StackPanel>

        <Rectangle Grid.Column="1" Width="1" Fill="#333333" Margin="0,4" />

        <!-- Latency -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
            <TextBlock Text="&#xE839;" FontFamily="Segoe MDL2 Assets" Foreground="#888888" FontSize="12" VerticalAlignment="Center" />
            <TextBlock x:Name="LatencyText" Text="--ms" Foreground="#CCCCCC" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
        </StackPanel>

        <Rectangle Grid.Column="3" Width="1" Fill="#333333" Margin="0,4" />

        <!-- CPU -->
        <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
            <TextBlock Text="CPU:" Foreground="#888888" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
            <TextBlock x:Name="CpuText" Text="--%" Foreground="#CCCCCC" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
        </StackPanel>

        <Rectangle Grid.Column="5" Width="1" Fill="#333333" Margin="0,4" />

        <!-- Memory -->
        <StackPanel Grid.Column="6" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
            <TextBlock Text="MEM:" Foreground="#888888" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
            <TextBlock x:Name="MemText" Text="--%" Foreground="#CCCCCC" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
        </StackPanel>

        <Rectangle Grid.Column="7" Width="1" Fill="#333333" Margin="0,4" />

        <!-- Disk -->
        <StackPanel Grid.Column="8" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
            <TextBlock Text="DISK:" Foreground="#888888" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
            <TextBlock x:Name="DiskText" Text="--%" Foreground="#CCCCCC" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
        </StackPanel>

        <Rectangle Grid.Column="9" Width="1" Fill="#333333" Margin="0,4" />

        <!-- Server Uptime -->
        <StackPanel Grid.Column="10" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
            <TextBlock Text="UP:" Foreground="#888888" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center" />
            <TextBlock x:Name="ServerUptimeText" Text="--" Foreground="#CCCCCC" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
        </StackPanel>

        <!-- Spacer -->
        <Border Grid.Column="11" />

        <!-- Upload throughput -->
        <StackPanel Grid.Column="12" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
            <TextBlock Text="&#xE898;" FontFamily="Segoe MDL2 Assets" Foreground="#4CAF50" FontSize="12" VerticalAlignment="Center" />
            <TextBlock x:Name="UploadText" Text="0 B/s" Foreground="#CCCCCC" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
        </StackPanel>

        <Rectangle Grid.Column="13" Width="1" Fill="#333333" Margin="0,4" />

        <!-- Download throughput -->
        <StackPanel Grid.Column="14" Orientation="Horizontal" Margin="8,0,8,0" VerticalAlignment="Center">
            <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" FontSize="12" VerticalAlignment="Center" />
            <TextBlock x:Name="DownloadText" Text="0 B/s" Foreground="#CCCCCC" FontSize="11" FontFamily="Consolas" Margin="4,0,0,0" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
