<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:SshManager.App.Converters">

    <!-- Standard WPF Converters -->
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    <!-- Custom Converters - Boolean -->
    <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
    <converters:NullToBoolConverter x:Key="NullToBoolConverter" />

    <!-- Custom Converters - Appearance -->
    <converters:NullToPrimaryAppearanceConverter x:Key="NullToPrimaryAppearanceConverter" />
    <converters:BoolToPrimaryAppearanceConverter x:Key="BoolToPrimaryAppearanceConverter" />
    <converters:InverseBoolToPrimaryAppearanceConverter x:Key="InverseBoolToPrimaryAppearanceConverter" />

    <!-- Custom Converters - Host Status -->
    <converters:HostStatusToColorConverter x:Key="HostStatusToColorConverter" />
    <converters:HostStatusToTooltipConverter x:Key="HostStatusToTooltipConverter" />
    <converters:HostActiveSessionBorderConverter x:Key="HostActiveSessionBorderConverter" />
    <converters:HostHasActiveSessionConverter x:Key="HostHasActiveSessionConverter" />

    <!-- Custom Converters - Group Colors -->
    <converters:GroupColorConverter x:Key="GroupColorConverter" />
    <converters:GroupColorToVisibilityConverter x:Key="GroupColorToVisibilityConverter" />

    <!-- Custom Converters - Session Tab -->
    <converters:SessionTabBorderConverter x:Key="SessionTabBorderConverter" />

    <!-- Custom Converters - Display -->
    <converters:NameToColorConverter x:Key="NameToColorConverter" />
    <converters:FirstLetterConverter x:Key="FirstLetterConverter" />
    <converters:FavoriteIconConverter x:Key="FavoriteIconConverter" />
    <converters:ConnectionTypeIconConverter x:Key="ConnectionTypeIconConverter" />
    <converters:RelativeTimeConverter x:Key="RelativeTimeConverter" />

    <!-- Custom Converters - File Operations -->
    <converters:FileSizeConverter x:Key="FileSizeConverter" />
    <converters:FileIconConverter x:Key="FileIconConverter" />
    <converters:ShellFileIconConverter x:Key="ShellFileIconConverter" />

    <!-- Custom Converters - Visibility -->
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

    <!-- Custom Converters - Other -->
    <converters:HighlightTextConverter x:Key="HighlightTextConverter" />
    <converters:ColorStringConverter x:Key="ColorStringConverter" />
    <converters:PaneFocusBorderConverter x:Key="PaneFocusBorderConverter" />
    <converters:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter" />

</ResourceDictionary>
