<ui:FluentWindow x:Class="SshManager.App.Views.Windows.StartupWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                mc:Ignorable="d"
                Title="SSH Manager"
                Height="280" Width="400"
                WindowStartupLocation="CenterScreen"
                ResizeMode="NoResize"
                ShowInTaskbar="False"
                ExtendsContentIntoTitleBar="True"
                WindowBackdropType="Mica">

    <Grid>
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- App Icon and Name -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                <Border Width="64" Height="64" CornerRadius="32"
                        Background="#1FFFFFFF"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,16">
                    <ui:SymbolIcon Symbol="PlugConnected24"
                                   FontSize="32"
                                   Opacity="0.9"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                </Border>
                <TextBlock Text="SSH Manager"
                           FontSize="24"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center" />
            </StackPanel>

            <!-- Spacer -->
            <Grid Grid.Row="1" />

            <!-- Progress Ring and Status -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,16,0,0">
                <ui:ProgressRing IsIndeterminate="True"
                                 Width="32" Height="32"
                                 HorizontalAlignment="Center" />
                <TextBlock x:Name="StatusText"
                           Text="Starting..."
                           FontSize="13"
                           Opacity="0.7"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0" />
            </StackPanel>

            <!-- Version -->
            <TextBlock Grid.Row="3"
                       Text="Version 1.0"
                       FontSize="11"
                       Opacity="0.4"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0" />
        </Grid>
    </Grid>
</ui:FluentWindow>
