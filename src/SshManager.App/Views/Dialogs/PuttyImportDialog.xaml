<ui:FluentWindow x:Class="SshManager.App.Views.Dialogs.PuttyImportDialog"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                mc:Ignorable="d"
                Title="Import from PuTTY"
                Height="550" Width="700"
                MinHeight="450" MinWidth="550"
                WindowStartupLocation="CenterOwner"
                ExtendsContentIntoTitleBar="True"
                WindowBackdropType="Mica">

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="Import from PuTTY"
                     ShowMaximize="True"
                     ShowMinimize="False" />

        <!-- Header Info -->
        <ui:CardControl Grid.Row="1" Margin="16,8">
            <ui:CardControl.Header>
                <StackPanel>
                    <TextBlock Text="PuTTY Sessions" FontWeight="SemiBold" />
                    <TextBlock Text="Import SSH sessions stored in PuTTY's Windows Registry"
                              FontSize="12" Opacity="0.7" />
                </StackPanel>
            </ui:CardControl.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="Info24" Margin="0,0,8,0" Opacity="0.7" />
                <TextBlock Text="Only SSH sessions are imported. Non-SSH protocols are skipped."
                          VerticalAlignment="Center"
                          Opacity="0.7" />
            </StackPanel>
        </ui:CardControl>

        <!-- Sessions List -->
        <Grid Grid.Row="2" Margin="16,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Selection Controls -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="{Binding SelectedCount, StringFormat='{}{0} session(s) selected'}"
                          VerticalAlignment="Center"
                          FontWeight="SemiBold" />
                <ui:Button Content="Select All"
                          Command="{Binding SelectAllCommand}"
                          Margin="16,0,0,0"
                          Padding="8,4" />
                <ui:Button Content="Select None"
                          Command="{Binding SelectNoneCommand}"
                          Margin="8,0,0,0"
                          Padding="8,4" />
            </StackPanel>

            <!-- Sessions DataGrid -->
            <DataGrid Grid.Row="1"
                     ItemsSource="{Binding Sessions}"
                     AutoGenerateColumns="False"
                     SelectionMode="Single"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     HeadersVisibility="Column"
                     GridLinesVisibility="Horizontal"
                     Visibility="{Binding HasSessions, Converter={StaticResource BoolToVisibilityConverter}}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="" Width="40">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Session Name"
                                       Binding="{Binding DisplayName}"
                                       Width="*"
                                       MinWidth="120" />

                    <DataGridTextColumn Header="Hostname"
                                       Binding="{Binding DisplayHostName}"
                                       Width="*"
                                       MinWidth="130" />

                    <DataGridTextColumn Header="Port"
                                       Binding="{Binding DisplayPort}"
                                       Width="60" />

                    <DataGridTextColumn Header="Username"
                                       Binding="{Binding DisplayUserName}"
                                       Width="100" />

                    <DataGridTemplateColumn Header="Auth Type" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayAuthType}" VerticalAlignment="Center" />
                                    <ui:SymbolIcon Symbol="Warning24"
                                                  Foreground="Orange"
                                                  FontSize="14"
                                                  Margin="4,0,0,0"
                                                  ToolTip="PuTTY .ppk key file may need conversion to OpenSSH format"
                                                  Visibility="{Binding HasPpkWarning, Converter={StaticResource BoolToVisibilityConverter}}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Empty State - No PuTTY installed -->
            <StackPanel Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding IsPuttyInstalled, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                <ui:SymbolIcon Symbol="Warning24" FontSize="48" Foreground="Orange" Opacity="0.7" />
                <TextBlock Text="PuTTY Not Found"
                          FontSize="16"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"
                          FontWeight="SemiBold" />
                <TextBlock Text="PuTTY is not installed or has no saved sessions."
                          FontSize="12"
                          HorizontalAlignment="Center"
                          Opacity="0.5"
                          Margin="0,4,0,0" />
            </StackPanel>

            <!-- Empty State - PuTTY installed but no SSH sessions -->
            <StackPanel Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Collapsed">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsPuttyInstalled}" Value="True" />
                                    <Condition Binding="{Binding HasSessions}" Value="False" />
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible" />
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <ui:SymbolIcon Symbol="DocumentSearch24" FontSize="48" Opacity="0.5" />
                <TextBlock Text="No SSH Sessions Found"
                          FontSize="16"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"
                          FontWeight="SemiBold" />
                <TextBlock Text="PuTTY is installed but has no SSH sessions saved."
                          FontSize="12"
                          HorizontalAlignment="Center"
                          Opacity="0.5"
                          Margin="0,4,0,0" />
            </StackPanel>
        </Grid>

        <!-- Warnings/Errors -->
        <Expander Grid.Row="3"
                 Header="{Binding Warnings.Count, StringFormat='Warnings ({0})'}"
                 Margin="16,0,16,8"
                 Visibility="{Binding HasWarnings, Converter={StaticResource BoolToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Warnings}" Margin="8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                  Foreground="Orange"
                                  FontSize="12"
                                  TextWrapping="Wrap"
                                  Margin="0,2" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Expander>

        <!-- Action Buttons -->
        <Grid Grid.Row="4" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="1"
                      Content="Cancel"
                      Command="{Binding CancelCommand}"
                      MinWidth="80"
                      Margin="0,0,8,0" />

            <ui:Button Grid.Column="2"
                      Content="Import Selected"
                      Appearance="Primary"
                      Command="{Binding ImportCommand}"
                      IsEnabled="{Binding HasSessions}"
                      MinWidth="120" />
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="5"
             Background="#80000000"
             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True" Width="40" Height="40" />
                <TextBlock Text="Loading PuTTY sessions..."
                          Foreground="White"
                          Margin="0,8,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
