<ui:FluentWindow x:Class="SshManager.App.Views.Dialogs.QuickConnectDialog"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                mc:Ignorable="d"
                Title="Quick Connect"
                Height="380" Width="400"
                MinHeight="380" MinWidth="350"
                WindowStartupLocation="CenterOwner"
                ResizeMode="NoResize"
                ExtendsContentIntoTitleBar="True"
                WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="Quick Connect"
                     ShowMaximize="False"
                     ShowMinimize="False" />

        <!-- Form Content -->
        <StackPanel Grid.Row="1" Margin="24,16">
            <!-- Hostname -->
            <TextBlock Text="Hostname / IP Address *"
                      FontWeight="SemiBold"
                      Margin="0,0,0,4" />
            <ui:TextBox x:Name="HostnameBox"
                       Text="{Binding Hostname, UpdateSourceTrigger=PropertyChanged}"
                       PlaceholderText="192.168.1.100 or server.example.com:22"
                       Margin="0,0,0,8" />
            <TextBlock Text="You can include port as hostname:port"
                      FontSize="11"
                      Opacity="0.6"
                      Margin="0,0,0,16" />

            <!-- Port -->
            <TextBlock Text="Port"
                      FontWeight="SemiBold"
                      Margin="0,0,0,4" />
            <ui:NumberBox Value="{Binding Port}"
                         Minimum="1"
                         Maximum="65535"
                         SpinButtonPlacementMode="Compact"
                         Margin="0,0,0,16" />

            <!-- Username (Optional) -->
            <TextBlock Text="Username"
                      FontWeight="SemiBold"
                      Margin="0,0,0,4" />
            <ui:TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                       PlaceholderText="root (optional - uses current user if empty)"
                       Margin="0,0,0,16" />

            <!-- Password (Optional) -->
            <TextBlock Text="Password"
                      FontWeight="SemiBold"
                      Margin="0,0,0,4" />
            <PasswordBox x:Name="PasswordBox"
                        PasswordChanged="PasswordBox_PasswordChanged"
                        Margin="0,0,0,4" />
            <TextBlock Text="Leave empty to use SSH keys or get prompted"
                      FontSize="11"
                      Opacity="0.6"
                      Margin="0,0,0,8" />
        </StackPanel>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="1"
                      Content="Cancel"
                      Command="{Binding CancelCommand}"
                      IsCancel="True"
                      Margin="0,0,8,0"
                      MinWidth="80" />

            <ui:Button Grid.Column="2"
                      Content="Connect"
                      Appearance="Primary"
                      Command="{Binding ConnectCommand}"
                      IsDefault="True"
                      MinWidth="80" />
        </Grid>
    </Grid>
</ui:FluentWindow>
