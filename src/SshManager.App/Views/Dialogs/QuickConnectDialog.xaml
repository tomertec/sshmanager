<ui:FluentWindow x:Class="SshManager.App.Views.Dialogs.QuickConnectDialog"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                mc:Ignorable="d"
                Title="Quick Connect"
                Height="480" Width="420"
                MinHeight="400" MinWidth="380"
                WindowStartupLocation="CenterOwner"
                ResizeMode="CanResizeWithGrip"
                ExtendsContentIntoTitleBar="True"
                WindowBackdropType="Mica">

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="Quick Connect"
                     ShowMaximize="False"
                     ShowMinimize="False" />

        <!-- Connection Type Toggle -->
        <Grid Grid.Row="1" Margin="24,8,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <RadioButton x:Name="SshRadio"
                        Grid.Column="0"
                        GroupName="ConnectionType"
                        IsChecked="{Binding IsSshMode, Mode=OneWay}"
                        Command="{Binding SetSshModeCommand}"
                        Style="{StaticResource {x:Type RadioButton}}"
                        HorizontalAlignment="Stretch">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Background="Transparent"
                                BorderBrush="#3FFFFFFF"
                                BorderThickness="1"
                                CornerRadius="6,0,0,6"
                                Padding="16,10"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <ui:SymbolIcon Symbol="Desktop20" Margin="0,0,8,0" />
                                <TextBlock Text="SSH" FontWeight="SemiBold" VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2F3F9BF8" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3F9BF8" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1FFFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>

            <RadioButton x:Name="SerialRadio"
                        Grid.Column="1"
                        GroupName="ConnectionType"
                        IsChecked="{Binding IsSerialMode, Mode=OneWay}"
                        Command="{Binding SetSerialModeCommand}"
                        Style="{StaticResource {x:Type RadioButton}}"
                        HorizontalAlignment="Stretch">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Background="Transparent"
                                BorderBrush="#3FFFFFFF"
                                BorderThickness="0,1,1,1"
                                CornerRadius="0,6,6,0"
                                Padding="16,10"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <ui:SymbolIcon Symbol="UsbPlug20" Margin="0,0,8,0" />
                                <TextBlock Text="Serial" FontWeight="SemiBold" VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2F3F9BF8" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3F9BF8" />
                                <Setter TargetName="Border" Property="BorderThickness" Value="1" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1FFFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
        </Grid>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Padding="24,16">
            <Grid>
                <!-- SSH Form -->
                <StackPanel Visibility="{Binding IsSshMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <!-- Hostname -->
                    <TextBlock Text="Hostname / IP Address *"
                              FontWeight="SemiBold"
                              Margin="0,0,0,4" />
                    <ui:TextBox x:Name="HostnameBox"
                               Text="{Binding Hostname, UpdateSourceTrigger=PropertyChanged}"
                               PlaceholderText="192.168.1.100 or server.example.com:22"
                               Margin="0,0,0,8" />
                    <TextBlock Text="You can include port as hostname:port"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,0,0,16" />

                    <!-- Port -->
                    <TextBlock Text="Port"
                              FontWeight="SemiBold"
                              Margin="0,0,0,4" />
                    <ui:NumberBox Value="{Binding Port}"
                                 Minimum="1"
                                 Maximum="65535"
                                 SpinButtonPlacementMode="Compact"
                                 Margin="0,0,0,16" />

                    <!-- Username (Optional) -->
                    <TextBlock Text="Username"
                              FontWeight="SemiBold"
                              Margin="0,0,0,4" />
                    <ui:TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                               PlaceholderText="root (optional - uses current user if empty)"
                               Margin="0,0,0,16" />

                    <!-- Password (Optional) -->
                    <TextBlock Text="Password"
                              FontWeight="SemiBold"
                              Margin="0,0,0,4" />
                    <PasswordBox x:Name="PasswordBox"
                                PasswordChanged="PasswordBox_PasswordChanged"
                                Margin="0,0,0,4" />
                    <TextBlock Text="Leave empty to use SSH keys or get prompted"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,0,0,8" />
                </StackPanel>

                <!-- Serial Form -->
                <StackPanel Visibility="{Binding IsSerialMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <!-- COM Port with refresh button -->
                    <TextBlock Text="COM Port *"
                              FontWeight="SemiBold"
                              Margin="0,0,0,4" />
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="SerialPortCombo"
                                 Grid.Column="0"
                                 ItemsSource="{Binding AvailablePorts}"
                                 SelectedItem="{Binding SerialPortName, Mode=TwoWay}"
                                 Text="{Binding SerialPortName, Mode=TwoWay}"
                                 IsEditable="True" />
                        <ui:Button Grid.Column="1"
                                  Icon="{ui:SymbolIcon ArrowSync16}"
                                  Command="{Binding RefreshPortsCommand}"
                                  ToolTip="Refresh available ports"
                                  Width="32" Height="32"
                                  Padding="0"
                                  Margin="8,0,0,0" />
                    </Grid>

                    <!-- Baud Rate -->
                    <TextBlock Text="Baud Rate"
                              FontWeight="SemiBold"
                              Margin="0,0,0,4" />
                    <ComboBox ItemsSource="{Binding BaudRateOptions}"
                             SelectedItem="{Binding SerialBaudRate, Mode=TwoWay}"
                             IsEditable="True"
                             Margin="0,0,0,16" />

                    <!-- Data Bits and Stop Bits in a row -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Data Bits"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4" />
                            <ComboBox ItemsSource="{Binding DataBitsOptions}"
                                     SelectedItem="{Binding SerialDataBits, Mode=TwoWay}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Stop Bits"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4" />
                            <ComboBox ItemsSource="{Binding StopBitsOptions}"
                                     SelectedItem="{Binding SerialStopBits, Mode=TwoWay}" />
                        </StackPanel>
                    </Grid>

                    <!-- Parity and Flow Control in a row -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Parity"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4" />
                            <ComboBox ItemsSource="{Binding ParityOptions}"
                                     SelectedItem="{Binding SerialParity, Mode=TwoWay}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Flow Control"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4" />
                            <ComboBox ItemsSource="{Binding HandshakeOptions}"
                                     SelectedItem="{Binding SerialHandshake, Mode=TwoWay}" />
                        </StackPanel>
                    </Grid>

                    <!-- Hardware Options -->
                    <TextBlock Text="Hardware Options"
                              FontWeight="SemiBold"
                              Margin="0,0,0,8" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <CheckBox Content="DTR Enable"
                                 IsChecked="{Binding SerialDtrEnable, Mode=TwoWay}"
                                 Margin="0,0,16,0" />
                        <CheckBox Content="RTS Enable"
                                 IsChecked="{Binding SerialRtsEnable, Mode=TwoWay}" />
                    </StackPanel>

                    <!-- Local Echo -->
                    <CheckBox Content="Local Echo"
                             IsChecked="{Binding SerialLocalEcho, Mode=TwoWay}"
                             Margin="0,0,0,16" />

                    <TextBlock Text="Common baud rates: 9600, 19200, 38400, 57600, 115200"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,0,0,0" />
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="1"
                      Content="Cancel"
                      Command="{Binding CancelCommand}"
                      IsCancel="True"
                      Margin="0,0,8,0"
                      MinWidth="80" />

            <ui:Button Grid.Column="2"
                      Content="Connect"
                      Appearance="Primary"
                      Command="{Binding ConnectCommand}"
                      IsDefault="True"
                      MinWidth="80" />
        </Grid>
    </Grid>
</ui:FluentWindow>
