<ui:FluentWindow x:Class="SshManager.App.Views.Dialogs.HostKeyVerificationDialog"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                mc:Ignorable="d"
                Title="{Binding Title}"
                Height="480" Width="520"
                MinHeight="400" MinWidth="450"
                WindowStartupLocation="CenterOwner"
                ResizeMode="NoResize"
                ExtendsContentIntoTitleBar="True"
                WindowBackdropType="Mica">

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="{Binding Title}"
                     ShowMaximize="False"
                     ShowMinimize="False" />

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="24,16">
            <StackPanel>
                <!-- Warning Icon and Message -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ui:SymbolIcon Grid.Column="0"
                                   Symbol="Warning24"
                                   FontSize="48"
                                   Margin="0,0,16,0"
                                   Foreground="{Binding IsFingerprintChanged, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Inverse'}"
                                   Visibility="{Binding IsFingerprintChanged, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <ui:SymbolIcon Grid.Column="0"
                                   Symbol="QuestionCircle24"
                                   FontSize="48"
                                   Margin="0,0,16,0"
                                   Visibility="{Binding IsNewHost, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <TextBlock Grid.Column="1"
                              Text="{Binding WarningMessage}"
                              TextWrapping="Wrap"
                              VerticalAlignment="Center" />
                </Grid>

                <!-- Host Information -->
                <ui:CardControl Margin="0,0,0,12">
                    <ui:CardControl.Header>
                        <TextBlock Text="Connection" FontWeight="SemiBold" />
                    </ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock>
                            <Run Text="{Binding Hostname, Mode=OneWay}" FontWeight="SemiBold" />
                            <Run Text=":" />
                            <Run Text="{Binding Port, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </ui:CardControl>

                <!-- Fingerprint Information -->
                <ui:CardExpander IsExpanded="True" Margin="0,0,0,12">
                    <ui:CardExpander.Header>
                        <StackPanel>
                            <TextBlock Text="Host Key Fingerprint" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding Algorithm}"
                                      FontSize="12" Opacity="0.6" />
                        </StackPanel>
                    </ui:CardExpander.Header>
                    <StackPanel Margin="8">
                        <TextBlock Text="Current Fingerprint:"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,4" />
                        <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                               CornerRadius="4"
                               Padding="8"
                               Margin="0,0,0,12">
                            <TextBlock Text="{Binding Fingerprint}"
                                      FontFamily="Consolas"
                                      TextWrapping="Wrap" />
                        </Border>

                        <!-- Previous Fingerprint (if changed) -->
                        <StackPanel Visibility="{Binding IsFingerprintChanged, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Previous Fingerprint:"
                                      FontWeight="SemiBold"
                                      Foreground="{ui:ThemeResource SystemFillColorCautionBrush}"
                                      Margin="0,0,0,4" />
                            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                   CornerRadius="4"
                                   Padding="8"
                                   BorderBrush="{ui:ThemeResource SystemFillColorCautionBrush}"
                                   BorderThickness="1">
                                <TextBlock Text="{Binding PreviousFingerprint}"
                                          FontFamily="Consolas"
                                          TextWrapping="Wrap" />
                            </Border>
                        </StackPanel>

                        <!-- First Seen (if existing) -->
                        <TextBlock Visibility="{Binding IsFingerprintChanged, Converter={StaticResource BoolToVisibilityConverter}}"
                                  Margin="0,12,0,0"
                                  Opacity="0.8">
                            <Run Text="Previously trusted since: " />
                            <Run Text="{Binding FirstSeen, StringFormat={}{0:yyyy-MM-dd HH:mm}}" FontWeight="SemiBold" />
                        </TextBlock>
                    </StackPanel>
                </ui:CardExpander>

                <!-- Security Notice -->
                <ui:InfoBar IsOpen="True"
                           IsClosable="False"
                           Severity="{Binding IsNewHost, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Info'}"
                           Title="Verify the fingerprint"
                           Message="If you're unsure, verify this fingerprint through an out-of-band channel (e.g., contact the server administrator)." />
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="1"
                      Content="Reject"
                      Command="{Binding RejectCommand}"
                      Margin="0,0,8,0"
                      MinWidth="100" />

            <ui:Button Grid.Column="2"
                      Content="Accept &amp; Trust"
                      Appearance="Primary"
                      Command="{Binding AcceptCommand}"
                      MinWidth="120" />
        </Grid>
    </Grid>
</ui:FluentWindow>
