<ui:FluentWindow x:Class="SshManager.App.Views.Dialogs.AboutDialog"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                mc:Ignorable="d"
                Title="About SSH Manager"
                Height="450" Width="500"
                MinHeight="400" MinWidth="450"
                WindowStartupLocation="CenterOwner"
                ResizeMode="NoResize"
                ExtendsContentIntoTitleBar="True"
                WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="About SSH Manager"
                     ShowMaximize="False"
                     ShowMinimize="False" />

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="24,16" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- App Icon -->
            <Border Width="96" Height="96" CornerRadius="48"
                    Background="#1FFFFFFF"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,24">
                <ui:SymbolIcon Symbol="PlugConnected24"
                              FontSize="48"
                              Opacity="0.9"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
            </Border>

            <!-- App Name -->
            <TextBlock Text="SSH Manager"
                      FontSize="28"
                      FontWeight="SemiBold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,8" />

            <!-- Version -->
            <TextBlock Text="Version 1.0"
                      FontSize="14"
                      Opacity="0.7"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,24" />

            <!-- Description -->
            <TextBlock Text="A modern Windows application for managing SSH and serial port connections with an embedded terminal."
                      TextWrapping="Wrap"
                      TextAlignment="Center"
                      Opacity="0.8"
                      MaxWidth="380"
                      Margin="0,0,0,24" />

            <!-- Features -->
            <Border Background="#0C000000" CornerRadius="8" Padding="16" MaxWidth="400">
                <StackPanel>
                    <TextBlock Text="Features" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <ui:SymbolIcon Symbol="Checkmark24" FontSize="16" Foreground="#4CAF50" Margin="0,0,8,0" />
                        <TextBlock Text="SSH connections with multiple authentication methods" Opacity="0.8" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <ui:SymbolIcon Symbol="Checkmark24" FontSize="16" Foreground="#4CAF50" Margin="0,0,8,0" />
                        <TextBlock Text="Serial port (COM port) connections" Opacity="0.8" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <ui:SymbolIcon Symbol="Checkmark24" FontSize="16" Foreground="#4CAF50" Margin="0,0,8,0" />
                        <TextBlock Text="Embedded xterm.js terminal with full VT100 support" Opacity="0.8" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <ui:SymbolIcon Symbol="Checkmark24" FontSize="16" Foreground="#4CAF50" Margin="0,0,8,0" />
                        <TextBlock Text="Split panes and terminal broadcasting" Opacity="0.8" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <ui:SymbolIcon Symbol="Checkmark24" FontSize="16" Foreground="#4CAF50" Margin="0,0,8,0" />
                        <TextBlock Text="SFTP file browser and port forwarding" Opacity="0.8" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <ui:SymbolIcon Symbol="Checkmark24" FontSize="16" Foreground="#4CAF50" Margin="0,0,8,0" />
                        <TextBlock Text="Session recording and playback" Opacity="0.8" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Copyright -->
            <TextBlock Text="Â© 2024-2026 SSH Manager"
                      FontSize="11"
                      Opacity="0.5"
                      HorizontalAlignment="Center"
                      Margin="0,24,0,0" />
        </StackPanel>

        <!-- Close Button -->
        <Grid Grid.Row="2" Margin="24,16">
            <ui:Button Content="Close"
                      Appearance="Primary"
                      Click="CloseButton_Click"
                      HorizontalAlignment="Right"
                      MinWidth="100" />
        </Grid>
    </Grid>
</ui:FluentWindow>
