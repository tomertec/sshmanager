<ui:FluentWindow x:Class="SshManager.App.Views.Dialogs.SshConfigImportDialog"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                xmlns:converters="clr-namespace:SshManager.App.Converters"
                mc:Ignorable="d"
                Title="Import from SSH Config"
                Height="600" Width="900"
                MinHeight="500" MinWidth="800"
                WindowStartupLocation="CenterOwner"
                ExtendsContentIntoTitleBar="True"
                WindowBackdropType="Mica">

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="Import from SSH Config"
                     ShowMaximize="True"
                     ShowMinimize="False" />

        <!-- File Selection -->
        <ui:CardControl Grid.Row="1" Margin="16,8">
            <ui:CardControl.Header>
                <StackPanel>
                    <TextBlock Text="SSH Config File" FontWeight="SemiBold" />
                    <TextBlock Text="Select your ~/.ssh/config file to import hosts"
                              FontSize="12" Opacity="0.7" />
                </StackPanel>
            </ui:CardControl.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ui:TextBox Grid.Column="0"
                           Text="{Binding ConfigFilePath, UpdateSourceTrigger=PropertyChanged}"
                           PlaceholderText="Path to SSH config file"
                           IsReadOnly="True" />
                <ui:Button Grid.Column="1"
                          Content="Browse..."
                          Command="{Binding BrowseCommand}"
                          Margin="8,0,0,0" />
                <ui:Button Grid.Column="2"
                          Content="Parse"
                          Appearance="Primary"
                          Command="{Binding ParseConfigCommand}"
                          Margin="8,0,0,0" />
            </Grid>
        </ui:CardControl>

        <!-- Hosts List -->
        <Grid Grid.Row="2" Margin="16,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Selection Controls -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="{Binding SelectedCount, StringFormat='{}{0} host(s) selected'}"
                          VerticalAlignment="Center"
                          FontWeight="SemiBold" />
                <ui:Button Content="Select All"
                          Command="{Binding SelectAllCommand}"
                          Margin="16,0,0,0"
                          Padding="8,4" />
                <ui:Button Content="Select None"
                          Command="{Binding SelectNoneCommand}"
                          Margin="8,0,0,0"
                          Padding="8,4" />
            </StackPanel>

            <!-- Hosts DataGrid -->
            <DataGrid Grid.Row="1"
                     ItemsSource="{Binding Hosts}"
                     AutoGenerateColumns="False"
                     SelectionMode="Single"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     HeadersVisibility="Column"
                     GridLinesVisibility="Horizontal"
                     Visibility="{Binding HasHosts, Converter={StaticResource BoolToVisibilityConverter}}">
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="4,2" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="" Width="56">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Alias"
                                       Binding="{Binding DisplayAlias}"
                                       Width="*"
                                       MinWidth="120" />

                    <DataGridTextColumn Header="Hostname"
                                       Binding="{Binding DisplayHostname}"
                                       Width="*"
                                       MinWidth="150" />

                    <DataGridTextColumn Header="Port"
                                       Binding="{Binding DisplayPort}"
                                       Width="60" />

                    <DataGridTextColumn Header="User"
                                       Binding="{Binding DisplayUser}"
                                       Width="100" />

                    <DataGridTextColumn Header="Auth Type"
                                       Binding="{Binding DisplayAuthType}"
                                       Width="100" />

                    <DataGridTemplateColumn Header="ProxyJump" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayProxyJump}"
                                          ToolTip="{Binding DisplayProxyJump}"
                                          TextTrimming="CharacterEllipsis"
                                          VerticalAlignment="Center"
                                          Foreground="{ui:ThemeResource AccentTextFillColorPrimaryBrush}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Port Forwards" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayPortForwarding}"
                                          ToolTip="{Binding PortForwardingTooltip}"
                                          TextTrimming="CharacterEllipsis"
                                          VerticalAlignment="Center"
                                          Foreground="{ui:ThemeResource AccentTextFillColorPrimaryBrush}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Empty State -->
            <StackPanel Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding HasHosts, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <ui:SymbolIcon Symbol="DocumentSearch24" FontSize="48" Opacity="0.5" />
                <TextBlock Text="No hosts found"
                          FontSize="16"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"
                          Opacity="0.7" />
                <TextBlock Text="Click 'Parse' to scan the config file"
                          FontSize="12"
                          HorizontalAlignment="Center"
                          Opacity="0.5" />
            </StackPanel>
        </Grid>

        <!-- Warnings/Errors -->
        <Expander Grid.Row="3"
                 Header="{Binding Warnings.Count, StringFormat='Warnings ({0})'}"
                 Margin="16,0,16,8"
                 Visibility="{Binding HasWarnings, Converter={StaticResource BoolToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Warnings}" Margin="8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                  Foreground="Orange"
                                  FontSize="12"
                                  TextWrapping="Wrap"
                                  Margin="0,2" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Expander>

        <!-- Action Buttons -->
        <Grid Grid.Row="4" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="1"
                      Content="Cancel"
                      Command="{Binding CancelCommand}"
                      MinWidth="80"
                      Margin="0,0,8,0" />

            <ui:Button Grid.Column="2"
                      Content="Import Selected"
                      Appearance="Primary"
                      Command="{Binding ImportCommand}"
                      IsEnabled="{Binding HasHosts}"
                      MinWidth="120" />
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="5"
             Background="#80000000"
             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True" Width="40" Height="40" />
                <TextBlock Text="Parsing config file..."
                          Foreground="White"
                          Margin="0,8,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
