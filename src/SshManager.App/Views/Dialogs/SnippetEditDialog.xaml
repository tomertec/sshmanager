<ui:FluentWindow x:Class="SshManager.App.Views.Dialogs.SnippetEditDialog"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                xmlns:local="clr-namespace:SshManager.App.Converters"
                mc:Ignorable="d"
                Title="{Binding DialogTitle}"
                Height="450" Width="500"
                MinHeight="400" MinWidth="450"
                WindowStartupLocation="CenterOwner"
                ResizeMode="NoResize"
                ExtendsContentIntoTitleBar="True"
                WindowBackdropType="Mica">

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="{Binding DialogTitle}"
                     ShowMaximize="False"
                     ShowMinimize="False" />

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="24,16">
            <StackPanel>
                <!-- Name -->
                <TextBlock Text="Name" FontWeight="SemiBold" Margin="0,0,0,4" />
                <ui:TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                           PlaceholderText="e.g., Restart Nginx"
                           Margin="0,0,0,16" />

                <!-- Command -->
                <TextBlock Text="Command" FontWeight="SemiBold" Margin="0,0,0,4" />
                <ui:TextBox Text="{Binding Command, UpdateSourceTrigger=PropertyChanged}"
                           PlaceholderText="e.g., sudo systemctl restart nginx"
                           AcceptsReturn="True"
                           TextWrapping="Wrap"
                           MinHeight="80"
                           MaxHeight="120"
                           VerticalScrollBarVisibility="Auto"
                           Margin="0,0,0,16" />

                <!-- Category -->
                <TextBlock Text="Category (optional)" FontWeight="SemiBold" Margin="0,0,0,4" />
                <ComboBox IsEditable="True"
                         Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                         ItemsSource="{Binding AvailableCategories}"
                         Margin="0,0,0,16" />

                <!-- Description -->
                <TextBlock Text="Description (optional)" FontWeight="SemiBold" Margin="0,0,0,4" />
                <ui:TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                           PlaceholderText="Brief description of what this command does"
                           AcceptsReturn="True"
                           TextWrapping="Wrap"
                           MinHeight="60"
                           MaxHeight="80"
                           VerticalScrollBarVisibility="Auto"
                           Margin="0,0,0,8" />

                <!-- Validation Error -->
                <TextBlock Text="{Binding ValidationError}"
                          Foreground="IndianRed"
                          Visibility="{Binding ValidationError, Converter={StaticResource StringToVisibilityConverter}}"
                          Margin="0,8,0,0" />
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="1"
                      Content="Cancel"
                      Command="{Binding CancelCommand}"
                      Margin="0,0,8,0"
                      MinWidth="80" />

            <ui:Button Grid.Column="2"
                      Content="Save"
                      Appearance="Primary"
                      Command="{Binding SaveCommand}"
                      MinWidth="80" />
        </Grid>
    </Grid>
</ui:FluentWindow>
