<Window x:Class="SshManager.App.Views.Dialogs.SnippetManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Snippets Manager"
        Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"
                                          xmlns:local="clr-namespace:SshManager.App.Converters" />

        <!-- DataGrid Styling for Dark Theme -->
        <Style x:Key="DarkDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#FF404040" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowBackground" Value="#FF2A2A2A" />
            <Setter Property="AlternatingRowBackground" Value="#FF252525" />
            <Setter Property="HorizontalGridLinesBrush" Value="#FF3A3A3A" />
            <Setter Property="VerticalGridLinesBrush" Value="#FF3A3A3A" />
        </Style>

        <Style x:Key="DarkDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF333333" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="BorderBrush" Value="#FF404040" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
        </Style>

        <Style x:Key="DarkDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8,6" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF0078D4" />
                    <Setter Property="Foreground" Value="#FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DarkDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF0078D4" />
                    <Setter Property="Foreground" Value="#FFFFFF" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3A3A3A" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#FF202020" CornerRadius="8" BorderBrush="#FF404040" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0"
                  x:Name="TitleBarGrid"
                  Background="Transparent"
                  Height="40"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="Snippets Manager"
                          VerticalAlignment="Center"
                          Margin="16,0,0,0"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="White" />
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0">
                    <Button x:Name="MaximizeButton"
                            Content="&#xE922;"
                            FontFamily="Segoe MDL2 Assets"
                            Width="40" Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#AAAAAA"
                            Click="MaximizeButton_Click" />
                    <Button Content="&#xE8BB;"
                            FontFamily="Segoe MDL2 Assets"
                            Width="40" Height="32"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#AAAAAA"
                            Click="CloseButton_Click" />
                </StackPanel>
            </Grid>

        <!-- Toolbar -->
        <Grid Grid.Row="1" Margin="16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Search -->
            <ui:TextBox Grid.Column="0"
                       Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                       PlaceholderText="Search snippets..."
                       Icon="{ui:SymbolIcon Search24}" />

            <!-- Category Filter -->
            <ComboBox Grid.Column="1"
                     ItemsSource="{Binding Categories}"
                     SelectedItem="{Binding SelectedCategory}"
                     Width="150"
                     Margin="8,0,0,0">
                <ComboBox.Style>
                    <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                        <Style.Triggers>
                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                <Setter Property="Text" Value="All Categories" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.Style>
            </ComboBox>

            <!-- Clear Filter -->
            <ui:Button Grid.Column="2"
                      Content="Clear"
                      Command="{Binding ClearFilterCommand}"
                      Margin="8,0,0,0"
                      Padding="12,6" />

            <!-- Add Button -->
            <ui:Button Grid.Column="3"
                      Content="Add Snippet"
                      Icon="{ui:SymbolIcon Add24}"
                      Appearance="Primary"
                      Command="{Binding AddSnippetCommand}"
                      Margin="8,0,0,0" />
        </Grid>

        <!-- Snippets List -->
        <DataGrid Grid.Row="2"
                 ItemsSource="{Binding Snippets}"
                 SelectedItem="{Binding SelectedSnippet}"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 Margin="16,8"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False"
                 HeadersVisibility="Column"
                 GridLinesVisibility="Horizontal"
                 Style="{StaticResource DarkDataGridStyle}"
                 ColumnHeaderStyle="{StaticResource DarkDataGridColumnHeaderStyle}"
                 CellStyle="{StaticResource DarkDataGridCellStyle}"
                 RowStyle="{StaticResource DarkDataGridRowStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                   Binding="{Binding Name}"
                                   Width="150"
                                   MinWidth="100" />

                <DataGridTextColumn Header="Command"
                                   Binding="{Binding Command}"
                                   Width="*"
                                   MinWidth="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                            <Setter Property="ToolTip" Value="{Binding Command}" />
                            <Setter Property="Foreground" Value="#E0E0E0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Category"
                                   Binding="{Binding Category}"
                                   Width="100" />

                <DataGridTemplateColumn Header="Actions" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="4">
                                <ui:Button Content="Run"
                                          Appearance="Primary"
                                          Command="{Binding DataContext.ExecuteSnippetCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                          CommandParameter="{Binding}"
                                          Padding="8,4"
                                          FontSize="11"
                                          Margin="0,0,4,0" />
                                <ui:Button Content="Edit"
                                          Command="{Binding DataContext.EditSnippetCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                          CommandParameter="{Binding}"
                                          Padding="8,4"
                                          FontSize="11"
                                          Margin="0,0,4,0" />
                                <ui:Button Content="Delete"
                                          Appearance="Danger"
                                          Command="{Binding DataContext.DeleteSnippetCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                          CommandParameter="{Binding}"
                                          Padding="8,4"
                                          FontSize="11" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick"
                             Command="{Binding ExecuteSnippetCommand}"
                             CommandParameter="{Binding SelectedSnippet}" />
            </DataGrid.InputBindings>
        </DataGrid>

        <!-- Empty State -->
        <StackPanel Grid.Row="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="{Binding Snippets.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <ui:SymbolIcon Symbol="Code24" FontSize="48" Opacity="0.5" />
            <TextBlock Text="No snippets yet"
                      FontSize="16"
                      HorizontalAlignment="Center"
                      Margin="0,8,0,0"
                      Opacity="0.7" />
            <TextBlock Text="Click 'Add Snippet' to create your first snippet"
                      FontSize="12"
                      HorizontalAlignment="Center"
                      Opacity="0.5" />
        </StackPanel>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Double-click a snippet to run it in the active terminal"
                      Opacity="0.6"
                      VerticalAlignment="Center" />

            <!-- Window Opacity Control -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,0,16,0">
                <ui:SymbolIcon Symbol="Eye24"
                              FontSize="16"
                              Opacity="0.6"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"
                              ToolTip="Window Opacity" />
                <Slider x:Name="OpacitySlider"
                        Width="100"
                        Minimum="0.2"
                        Maximum="1.0"
                        Value="1.0"
                        TickFrequency="0.1"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        ToolTip="Adjust window transparency to see terminal behind" />
            </StackPanel>

            <ui:Button Grid.Column="2"
                      Content="Close"
                      Command="{Binding CloseCommand}"
                      MinWidth="80" />
        </Grid>

            <!-- Loading Overlay -->
            <Grid Grid.RowSpan="4"
                 Background="#80000000"
                 Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <ui:ProgressRing IsIndeterminate="True" Width="40" Height="40" />
            </Grid>
        </Grid>
    </Border>
</Window>
