<ui:FluentWindow x:Class="SshManager.App.Views.Dialogs.ConnectionHistoryDialog"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                mc:Ignorable="d"
                Title="Connection History"
                Height="600" Width="700"
                MinHeight="500" MinWidth="600"
                WindowStartupLocation="CenterOwner"
                ExtendsContentIntoTitleBar="True"
                WindowBackdropType="Mica">

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                     Title="Connection History"
                     ShowMaximize="True"
                     ShowMinimize="False" />

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Margin="16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:CardControl Grid.Column="0" Margin="0,0,8,0">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Total" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding TotalConnections}"
                                  FontSize="24"
                                  FontWeight="Bold" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="History24" FontSize="24" />
            </ui:CardControl>

            <ui:CardControl Grid.Column="1" Margin="4,0">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Successful" FontWeight="SemiBold" Foreground="LightGreen" />
                        <TextBlock Text="{Binding SuccessfulConnections}"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="LightGreen" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Checkmark24" FontSize="24" Foreground="LightGreen" />
            </ui:CardControl>

            <ui:CardControl Grid.Column="2" Margin="8,0,0,0">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Failed" FontWeight="SemiBold" Foreground="IndianRed" />
                        <TextBlock Text="{Binding FailedConnections}"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="IndianRed" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:SymbolIcon Symbol="Dismiss24" FontSize="24" Foreground="IndianRed" />
            </ui:CardControl>
        </Grid>

        <!-- History List -->
        <DataGrid Grid.Row="2"
                 ItemsSource="{Binding HistoryEntries}"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 Margin="16,8"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False"
                 HeadersVisibility="Column"
                 GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Host" Width="*" MinWidth="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="4">
                                <ui:SymbolIcon Symbol="Desktop24" Margin="0,0,8,0" />
                                <StackPanel>
                                    <TextBlock Text="{Binding Host.DisplayName, FallbackValue='Unknown'}"
                                              FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Host.Hostname, FallbackValue=''}"
                                              FontSize="11"
                                              Opacity="0.6" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Connected At"
                                   Binding="{Binding ConnectedAt, StringFormat={}{0:g}}"
                                   Width="150" />

                <DataGridTemplateColumn Header="Status" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="4">
                                <ui:SymbolIcon>
                                    <ui:SymbolIcon.Style>
                                        <Style TargetType="ui:SymbolIcon">
                                            <Setter Property="Symbol" Value="Checkmark24" />
                                            <Setter Property="Foreground" Value="LightGreen" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding WasSuccessful}" Value="False">
                                                    <Setter Property="Symbol" Value="Dismiss24" />
                                                    <Setter Property="Foreground" Value="IndianRed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ui:SymbolIcon.Style>
                                </ui:SymbolIcon>
                                <TextBlock Margin="4,0,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Success" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding WasSuccessful}" Value="False">
                                                    <Setter Property="Text" Value="Failed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Action" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ui:Button Content="Reconnect"
                                      Appearance="Primary"
                                      Command="{Binding DataContext.ReconnectCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                      CommandParameter="{Binding}"
                                      Visibility="{Binding WasSuccessful, Converter={StaticResource BoolToVisibilityConverter}}"
                                      Padding="8,4"
                                      FontSize="11" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="0"
                      Content="Clear History"
                      Appearance="Danger"
                      Command="{Binding ClearHistoryCommand}"
                      MinWidth="100" />

            <ui:Button Grid.Column="2"
                      Content="Close"
                      Command="{Binding CloseCommand}"
                      MinWidth="80" />
        </Grid>
    </Grid>
</ui:FluentWindow>
