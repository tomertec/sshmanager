<UserControl x:Class="SshManager.App.Views.Controls.QuickConnectOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:SshManager.App.Converters"
             mc:Ignorable="d"
             Focusable="True"
             d:DesignHeight="400" d:DesignWidth="500">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <converters:GroupColorConverter x:Key="GroupColorConverter" />
        <converters:GroupColorToVisibilityConverter x:Key="GroupColorToVisibilityConverter" />
        <converters:HighlightTextConverter x:Key="HighlightTextConverter" />
        <converters:FavoriteIconConverter x:Key="FavoriteIconConverter" />
        <converters:ConnectionTypeIconConverter x:Key="ConnectionTypeIconConverter" />
        <converters:HostStatusToColorConverter x:Key="HostStatusToColorConverter" />
        <converters:HostStatusToTooltipConverter x:Key="HostStatusToTooltipConverter" />
        
        <!-- Fade-in animation for overlay -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Slide-in animation for command palette -->
        <Storyboard x:Key="SlideInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="-20" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <!-- Full-screen overlay with semi-transparent background -->
    <Grid x:Name="OverlayGrid"
          Visibility="{Binding IsOpen, Converter={StaticResource BoolToVisibilityConverter}}"
          MouseLeftButtonDown="Overlay_MouseLeftButtonDown">
        
        <Grid.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}" />
            </EventTrigger>
        </Grid.Triggers>

        <!-- Dark overlay background with blur effect simulation -->
        <Border Background="#90000000" />

        <!-- Command palette container -->
        <Border x:Name="PaletteBorder"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,50,0,0"
                MinWidth="520"
                MaxWidth="620"
                MaxHeight="480"
                Background="{DynamicResource SystemFillColorSolidNeutralBackgroundBrush}"
                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                MouseLeftButtonDown="Palette_MouseLeftButtonDown">
            <Border.RenderTransform>
                <TranslateTransform />
            </Border.RenderTransform>
            <Border.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource SlideInStoryboard}" />
                </EventTrigger>
            </Border.Triggers>
            <Border.Effect>
                <DropShadowEffect BlurRadius="32"
                                  ShadowDepth="12"
                                  Opacity="0.5"
                                  Color="Black" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Pill-shaped search container -->
                <Border Grid.Row="0"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="#3B82F6"
                        BorderThickness="2"
                        CornerRadius="20"
                        Margin="12"
                        Padding="14,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Search icon -->
                        <ui:SymbolIcon Grid.Column="0"
                                       Symbol="Search24"
                                       FontSize="18"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

                        <!-- Search TextBox -->
                        <TextBox x:Name="SearchTextBox"
                                 Grid.Column="1"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="16"
                                 VerticalContentAlignment="Center"
                                 PreviewKeyDown="SearchTextBox_PreviewKeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                    <Setter Property="CaretBrush" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Keyboard hint -->
                        <Border Grid.Column="2"
                                Background="#1AFFFFFF"
                                CornerRadius="10"
                                Padding="10,4"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="↵ Connect"
                                       FontSize="11"
                                       Opacity="0.6"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                    </Grid>
                </Border>

                <!-- Scrollable content area -->
                <ScrollViewer Grid.Row="1"
                              Background="Transparent"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="350">
                    <StackPanel>
                        <!-- Recent hosts section (shown when no search text) -->
                        <StackPanel Visibility="{Binding ShowRecentSection, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="RECENT CONNECTIONS"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       Margin="16,12,16,6"/>
                            <ItemsControl ItemsSource="{Binding RecentHosts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="Transparent"
                                                CornerRadius="6"
                                                Padding="12,10"
                                                Margin="8,2"
                                                Cursor="Hand"
                                                MouseLeftButtonUp="RecentHost_MouseLeftButtonUp">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="Transparent" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Status indicator dot -->
                                                <Ellipse Grid.Column="0"
                                                         Width="8" Height="8"
                                                         Margin="0,0,10,0"
                                                         VerticalAlignment="Center">
                                                    <Ellipse.ToolTip>
                                                        <MultiBinding Converter="{StaticResource HostStatusToTooltipConverter}">
                                                            <Binding Path="Id" />
                                                            <Binding Path="DataContext.HostStatuses" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                        </MultiBinding>
                                                    </Ellipse.ToolTip>
                                                    <Ellipse.Fill>
                                                        <MultiBinding Converter="{StaticResource HostStatusToColorConverter}">
                                                            <Binding Path="Id" />
                                                            <Binding Path="DataContext.HostStatuses" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                        </MultiBinding>
                                                    </Ellipse.Fill>
                                                </Ellipse>

                                                <!-- Group color indicator -->
                                                <Border Grid.Column="1"
                                                        Width="4"
                                                        Margin="0,0,10,0"
                                                        CornerRadius="2"
                                                        Visibility="{Binding Group.Color, Converter={StaticResource GroupColorToVisibilityConverter}}">
                                                    <Border.Background>
                                                        <Binding Path="Group.Color" Converter="{StaticResource GroupColorConverter}" />
                                                    </Border.Background>
                                                </Border>

                                                <!-- Host info -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal">
                                                        <!-- Connection type icon -->
                                                        <ui:SymbolIcon Symbol="{Binding ConnectionType, Converter={StaticResource ConnectionTypeIconConverter}}"
                                                                       FontSize="14"
                                                                       Margin="0,0,6,0"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis" />
                                                        <!-- Favorite star -->
                                                        <ui:SymbolIcon Symbol="{Binding IsFavorite, Converter={StaticResource FavoriteIconConverter}}"
                                                                       FontSize="12"
                                                                       Margin="6,0,0,0"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="#FFD700"
                                                                       Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}" />
                                                    </StackPanel>
                                                    <TextBlock FontSize="11"
                                                               Opacity="0.6"
                                                               Margin="0,3,0,0"
                                                               TextTrimming="CharacterEllipsis">
                                                        <Run Text="{Binding Username, Mode=OneWay}" /><Run Text="@" /><Run Text="{Binding Hostname, Mode=OneWay}" /><Run Text=":" /><Run Text="{Binding Port, Mode=OneWay}" />
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Group badge -->
                                                <Border Grid.Column="3"
                                                        Background="{DynamicResource ControlFillColorTertiaryBrush}"
                                                        CornerRadius="4"
                                                        Padding="8,4"
                                                        Margin="8,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding Group, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Group.Name}"
                                                               FontSize="10"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                                </Border>
                                                
                                                <!-- History icon indicator -->
                                                <ui:SymbolIcon Grid.Column="4"
                                                               Symbol="History24"
                                                               FontSize="14"
                                                               Margin="8,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                               ToolTip="Recently connected" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Border Height="1"
                                    Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    Opacity="0.3"
                                    Margin="16,10"/>
                        </StackPanel>

                        <!-- Search results -->
                        <ListBox x:Name="HostListBox"
                                 ItemsSource="{Binding FilteredHosts}"
                                 SelectedItem="{Binding SelectedHost, Mode=TwoWay}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.ScrollUnit="Pixel"
                                 Padding="4"
                                 PreviewMouseLeftButtonUp="HostListBox_PreviewMouseLeftButtonUp">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="ItemBorder"
                                                        Background="Transparent"
                                                        CornerRadius="6"
                                                        Padding="12,10"
                                                        Margin="4,2">
                                                    <ContentPresenter />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
                                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource AccentFillColorDefaultBrush}" />
                                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="1" />
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Status indicator dot -->
                                        <Ellipse Grid.Column="0"
                                                 Width="8" Height="8"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center">
                                            <Ellipse.ToolTip>
                                                <MultiBinding Converter="{StaticResource HostStatusToTooltipConverter}">
                                                    <Binding Path="Id" />
                                                    <Binding Path="DataContext.HostStatuses" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                </MultiBinding>
                                            </Ellipse.ToolTip>
                                            <Ellipse.Fill>
                                                <MultiBinding Converter="{StaticResource HostStatusToColorConverter}">
                                                    <Binding Path="Id" />
                                                    <Binding Path="DataContext.HostStatuses" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                </MultiBinding>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <!-- Group color indicator -->
                                        <Border Grid.Column="1"
                                                Width="4"
                                                Margin="0,0,10,0"
                                                CornerRadius="2"
                                                Visibility="{Binding Group.Color, Converter={StaticResource GroupColorToVisibilityConverter}}">
                                            <Border.Background>
                                                <Binding Path="Group.Color" Converter="{StaticResource GroupColorConverter}" />
                                            </Border.Background>
                                        </Border>

                                        <!-- Host info with highlighting -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <!-- Display name row with connection type icon and favorite star -->
                                            <StackPanel Orientation="Horizontal">
                                                <!-- Connection type icon -->
                                                <ui:SymbolIcon Symbol="{Binding ConnectionType, Converter={StaticResource ConnectionTypeIconConverter}}"
                                                               FontSize="14"
                                                               Margin="0,0,6,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                                <!-- Display name with fuzzy match highlighting -->
                                                <ContentControl FontSize="14"
                                                                FontWeight="SemiBold"
                                                                VerticalAlignment="Center">
                                                    <ContentControl.Content>
                                                        <MultiBinding Converter="{StaticResource HighlightTextConverter}">
                                                            <Binding Path="DisplayName"/>
                                                            <Binding Path="DataContext.SearchText" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                        </MultiBinding>
                                                    </ContentControl.Content>
                                                </ContentControl>
                                                <!-- Favorite star -->
                                                <ui:SymbolIcon Symbol="{Binding IsFavorite, Converter={StaticResource FavoriteIconConverter}}"
                                                               FontSize="12"
                                                               Margin="6,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="#FFD700"
                                                               Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            </StackPanel>
                                            <!-- Secondary info: hostname/IP and port -->
                                            <TextBlock FontSize="11"
                                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                       Margin="0,3,0,0"
                                                       TextTrimming="CharacterEllipsis">
                                                <Run Text="{Binding Username, Mode=OneWay}" /><Run Text="@" /><Run Text="{Binding Hostname, Mode=OneWay}" /><Run Text=":" /><Run Text="{Binding Port, Mode=OneWay}" />
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Group badge -->
                                        <Border Grid.Column="3"
                                                Background="{DynamicResource ControlFillColorTertiaryBrush}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                Margin="8,0,0,0"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding Group, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="{Binding Group.Name}"
                                                       FontSize="10"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- Empty state message -->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding HasResults, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <ui:SymbolIcon Symbol="SearchInfo24"
                                   FontSize="32"
                                   Opacity="0.5"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8" />
                    <TextBlock Text="No hosts found"
                               FontSize="14"
                               Opacity="0.6"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Try a different search term"
                               FontSize="12"
                               Opacity="0.4"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0" />
                </StackPanel>

                <!-- Keyboard shortcuts hint -->
                <Border Grid.Row="2"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="0,1,0,0"
                        CornerRadius="0,0,12,12"
                        Padding="12,10">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <!-- Navigate hint -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                    CornerRadius="4"
                                    Padding="6,2"
                                    Margin="0,0,4,0">
                                <TextBlock Text="↑↓"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </Border>
                            <TextBlock Text="Navigate"
                                       FontSize="10"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                        
                        <!-- Connect hint -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                    CornerRadius="4"
                                    Padding="6,2"
                                    Margin="0,0,4,0">
                                <TextBlock Text="Enter"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </Border>
                            <TextBlock Text="Connect"
                                       FontSize="10"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                        
                        <!-- Close hint -->
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                    CornerRadius="4"
                                    Padding="6,2"
                                    Margin="0,0,4,0">
                                <TextBlock Text="Esc"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </Border>
                            <TextBlock Text="Close"
                                       FontSize="10"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
