<UserControl x:Class="SshManager.App.Views.Controls.TerminalPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:terminal="clr-namespace:SshManager.Terminal.Controls;assembly=SshManager.Terminal"
             xmlns:converters="clr-namespace:SshManager.App.Converters"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Focusable="True"
             GotFocus="UserControl_GotFocus">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>

    <Border x:Name="PaneBorder"
            Background="#0C0C0C"
            CornerRadius="4"
            Margin="2"
            ClipToBounds="True">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="#2A2A2A" />
                <Setter Property="BorderThickness" Value="1" />
                <Style.Triggers>
                    <!-- Focus indicator - blue border when focused -->
                    <DataTrigger Binding="{Binding IsFocused}" Value="True">
                        <Setter Property="BorderBrush" Value="#0078D4" />
                        <Setter Property="BorderThickness" Value="2" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Pane Header -->
            <Border Grid.Row="0"
                    Background="#1A1A1A"
                    Padding="8,4"
                    CornerRadius="4,4,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Session title -->
                    <TextBlock Grid.Column="0"
                               Text="{Binding DisplayTitle}"
                               Foreground="#CCCCCC"
                               FontSize="12"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis" />

                    <!-- Primary indicator -->
                    <TextBlock Grid.Column="1"
                               Text="(Primary)"
                               Foreground="#888888"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"
                               Visibility="{Binding IsPrimaryForSession, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <!-- Split buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0,0,0">
                        <ui:Button Padding="4"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   ToolTip="Split Vertical (Ctrl+Shift+D)"
                                   Click="SplitVertical_Click">
                            <ui:SymbolIcon Symbol="SplitVertical20" FontSize="14" />
                        </ui:Button>
                        <ui:Button Padding="4"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   ToolTip="Split Horizontal (Ctrl+Shift+E)"
                                   Click="SplitHorizontal_Click">
                            <ui:SymbolIcon Symbol="SplitHorizontal20" FontSize="14" />
                        </ui:Button>
                    </StackPanel>

                    <!-- Close button -->
                    <ui:Button Grid.Column="3"
                               Padding="4"
                               Background="Transparent"
                               BorderThickness="0"
                               ToolTip="Close Pane (Ctrl+Shift+W)"
                               Click="ClosePane_Click"
                               Margin="4,0,0,0">
                        <ui:SymbolIcon Symbol="Dismiss12" FontSize="12" />
                    </ui:Button>
                </Grid>
            </Border>

            <!-- Terminal Control - Using EasyWindowsTerminalControl (Windows Terminal engine) -->
            <terminal:SshTerminalControl Grid.Row="1"
                                         x:Name="Terminal"
                                         Loaded="Terminal_Loaded"
                                         GotFocus="Terminal_GotFocus" />

            <!-- Empty pane overlay -->
            <Border Grid.Row="1"
                    Background="#0C0C0C"
                    Visibility="{Binding Session, Converter={StaticResource NullToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ui:SymbolIcon Symbol="DesktopSignal24" FontSize="48" Opacity="0.3" />
                    <TextBlock Text="No session"
                               Foreground="#666666"
                               FontSize="14"
                               Margin="0,12,0,0"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Connect to a host from the list"
                               Foreground="#444444"
                               FontSize="12"
                               Margin="0,4,0,0"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
