<UserControl x:Class="SshManager.App.Views.Controls.ConnectionProgressOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">

    <Border Background="#80000000"
            Visibility="{Binding Session.IsConnecting, Converter={StaticResource BoolToVisibilityConverter}}">
        <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                CornerRadius="12"
                Padding="32,24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="320"
                BorderThickness="1"
                BorderBrush="{ui:ThemeResource ControlStrokeColorDefaultBrush}">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.5" />
            </Border.Effect>
            <StackPanel>
                <!-- Progress Ring -->
                <ui:ProgressRing IsIndeterminate="True"
                                Width="48"
                                Height="48"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,16" />

                <!-- Connecting text -->
                <TextBlock Text="Connecting..."
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8" />

                <!-- Host name -->
                <TextBlock Text="{Binding Session.ConnectingHostName}"
                           FontSize="13"
                           Opacity="0.7"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="260"
                           TextAlignment="Center" />
            </StackPanel>
        </Border>
    </Border>
</UserControl>
