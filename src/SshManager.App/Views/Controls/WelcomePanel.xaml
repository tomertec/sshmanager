<UserControl x:Class="SshManager.App.Views.Controls.WelcomePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600">

    <StackPanel VerticalAlignment="Center"
               HorizontalAlignment="Center">
        <!-- Centered Illustrated Circle -->
        <Border x:Name="QuickConnectCircle"
                Width="100" Height="100" CornerRadius="50"
                Background="#1FFFFFFF"
                HorizontalAlignment="Center"
                Margin="0,0,0,24"
                BorderThickness="2"
                Cursor="Hand"
                ToolTip="Quick Connect - Connect to any host (Ctrl+K)"
                MouseLeftButtonDown="QuickConnectCircle_MouseLeftButtonDown"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="QuickConnectScale" ScaleX="1" ScaleY="1" />
                </TransformGroup>
            </Border.RenderTransform>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0078D4" Offset="0" />
                    <GradientStop Color="#00B4D8" Offset="0.5" />
                    <GradientStop Color="#0078D4" Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Effect>
                <DropShadowEffect x:Name="QuickConnectGlow" Color="#0078D4" BlurRadius="20" ShadowDepth="0" Opacity="0.4" />
            </Border.Effect>
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                    To="1.08" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                    To="1.08" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                                                    To="35" Duration="0:0:0.2" />
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                                    To="0.7" Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                    To="1" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                    To="1" Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                                                    To="20" Duration="0:0:0.2" />
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                                    To="0.4" Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <ui:SymbolIcon Symbol="PlugConnected24"
                          FontSize="48"
                          Opacity="0.8"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
        </Border>

        <TextBlock Text="Welcome to SSH Manager"
                  FontSize="28"
                  FontWeight="SemiBold"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,8" />
        <TextBlock Text="Select a host from the list and click Connect to start a session"
                  Opacity="0.6"
                  FontSize="14"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,24" />
        <StackPanel Orientation="Horizontal"
                   HorizontalAlignment="Center">
            <Button Command="{Binding HostManagement.AddHostCommand}"
                    Padding="16,10"
                    FontSize="14"
                    Margin="0,0,12,0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder"
                                            Background="#286fe0"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <ui:SymbolIcon Symbol="Add24" Margin="0,0,8,0" Foreground="White"/>
                                            <TextBlock x:Name="ButtonText" Text="Add Host" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background" Value="#3a7de8"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background" Value="#1e5bb8"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding HostManagement.HasHosts}" Value="False">
                                            <Setter TargetName="ButtonText" Property="Text" Value="Add Your First Host"/>
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <ui:DropDownButton Icon="{ui:SymbolIcon ArrowDownload24}"
                              Content="Import Hosts"
                              Padding="16,10"
                              FontSize="14"
                              CornerRadius="8">
                <ui:DropDownButton.Flyout>
                    <ContextMenu>
                        <ui:MenuItem Header="From File..."
                                    Icon="{ui:SymbolIcon Document24}"
                                    Click="ImportHostsButton_Click" />
                        <ui:MenuItem Header="From SSH Config..."
                                    Icon="{ui:SymbolIcon Code24}"
                                    Click="ImportFromSshConfigButton_Click" />
                        <ui:MenuItem Header="From PuTTY..."
                                    Icon="{ui:SymbolIcon WindowConsole20}"
                                    Click="ImportFromPuttyButton_Click" />
                    </ContextMenu>
                </ui:DropDownButton.Flyout>
            </ui:DropDownButton>
        </StackPanel>

        <!-- Keyboard Shortcut Hint at bottom -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,32,0,0">
            <Border Background="#15FFFFFF" CornerRadius="4" Padding="8,4" Margin="4">
                <TextBlock Text="Ctrl+K" FontFamily="Cascadia Code" FontSize="11" Opacity="0.6"/>
            </Border>
            <TextBlock Text="Quick Connect" Opacity="0.5" VerticalAlignment="Center" Margin="8,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
