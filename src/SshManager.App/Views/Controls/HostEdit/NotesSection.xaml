<UserControl x:Class="SshManager.App.Views.Controls.HostEdit.NotesSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="HostEditResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <!-- Notes -->
        <TextBlock Text="Notes"
                   Style="{StaticResource SectionLabelStyle}" />
        <ui:TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="Optional notes about this host..."
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    MinHeight="60"
                    MaxHeight="100"
                    Margin="0,0,0,16" />

        <!-- Secure Notes -->
        <Grid Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Secure Notes"
                           FontWeight="SemiBold" />
                <ui:SymbolIcon Symbol="LockClosed16"
                               FontSize="12"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"
                               Opacity="0.7" />
            </StackPanel>
            <ui:Button Grid.Column="1"
                       Icon="{ui:SymbolIcon Eye24}"
                       ToolTip="Toggle visibility"
                       Command="{Binding ToggleSecureNotesVisibilityCommand}"
                       Width="32" Height="28"
                       Padding="0" />
        </Grid>
        <ui:TextBox Text="{Binding DisplayedSecureNotes, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="Encrypted notes (passwords, keys, etc.)"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    MinHeight="60"
                    MaxHeight="100"
                    Margin="0,0,0,4" />
        <TextBlock Text="Encrypted locally using Windows DPAPI"
                   Style="{StaticResource HintTextStyle}"
                   Margin="0,0,0,16" />
    </StackPanel>
</UserControl>
