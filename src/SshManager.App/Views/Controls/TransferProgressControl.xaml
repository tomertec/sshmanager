<UserControl x:Class="SshManager.App.Views.Controls.TransferProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:SshManager.App.Converters"
             xmlns:models="clr-namespace:SshManager.Core.Models;assembly=SshManager.Core"
             xmlns:controls="clr-namespace:SshManager.App.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="400"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:FileSizeConverter x:Key="FileSizeConverter" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    </UserControl.Resources>

    <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
            CornerRadius="6"
            Padding="8"
            Margin="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header with Clear Button -->
            <Grid Grid.Row="0" Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="ArrowSync24" FontSize="14" Margin="0,0,6,0" />
                    <TextBlock Text="Transfers"
                               FontWeight="SemiBold"
                               FontSize="12"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{Binding Count, StringFormat=({0})}"
                               FontSize="12"
                               Opacity="0.6"
                               VerticalAlignment="Center"
                               Margin="4,0,0,0" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Icon="{ui:SymbolIcon Dismiss24}"
                               ToolTip="Clear Completed"
                               Command="{Binding DataContext.ClearCompletedTransfersCommand, RelativeSource={RelativeSource AncestorType=controls:SftpBrowserControl}}"
                               Padding="4"
                               Margin="0,0,4,0"
                               FontSize="10" />
                    <ui:Button Icon="{ui:SymbolIcon Stop24}"
                               ToolTip="Cancel All"
                               Command="{Binding DataContext.CancelAllTransfersCommand, RelativeSource={RelativeSource AncestorType=controls:SftpBrowserControl}}"
                               Appearance="Caution"
                               Padding="4"
                               FontSize="10" />
                </StackPanel>
            </Grid>

            <!-- Transfer List -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          MaxHeight="150">
                <ItemsControl ItemsSource="{Binding}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ui:ThemeResource ControlFillColorSecondaryBrush}"
                                    CornerRadius="4"
                                    Padding="8,6"
                                    Margin="0,0,0,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Direction Icon -->
                                    <TextBlock Grid.Column="0"
                                               Grid.RowSpan="2"
                                               Text="{Binding DirectionDisplay}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#3498DB" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Direction}" Value="{x:Static models:TransferDirection.Upload}">
                                                        <Setter Property="Foreground" Value="#2ECC71" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- File Name and Status -->
                                    <TextBlock Grid.Column="1" Grid.Row="0"
                                               Text="{Binding FileName}"
                                               FontWeight="Medium"
                                               FontSize="12"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center" />

                                    <!-- Progress Bar -->
                                    <Grid Grid.Column="1" Grid.Row="1" Margin="0,4,8,0">
                                        <ProgressBar Value="{Binding Progress}"
                                                     Maximum="100"
                                                     Height="4"
                                                     Background="#30FFFFFF">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar">
                                                    <Setter Property="Foreground" Value="#3498DB" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static models:TransferStatus.Completed}">
                                                            <Setter Property="Foreground" Value="#2ECC71" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static models:TransferStatus.Failed}">
                                                            <Setter Property="Foreground" Value="#E74C3C" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static models:TransferStatus.Cancelled}">
                                                            <Setter Property="Foreground" Value="#95A5A6" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                    </Grid>

                                    <!-- Status Text -->
                                    <TextBlock Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
                                               Text="{Binding StatusDisplay}"
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Opacity" Value="0.7" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:TransferStatus.Failed}">
                                                        <Setter Property="Foreground" Value="#E74C3C" />
                                                        <Setter Property="Opacity" Value="1" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Column="3" Grid.Row="0" Grid.RowSpan="2"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <ui:Button Content="Resume"
                                                   ToolTip="Resume Transfer"
                                                   Command="{Binding DataContext.ResumeTransferCommand, RelativeSource={RelativeSource AncestorType=controls:SftpBrowserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Padding="6,2"
                                                   Margin="0,0,4,0"
                                                   Visibility="{Binding ShowResumeButton, Converter={StaticResource BoolToVisibilityConverter}}" />

                                        <ui:Button Content="Retry"
                                                   ToolTip="Retry Transfer"
                                                   Command="{Binding DataContext.RetryTransferCommand, RelativeSource={RelativeSource AncestorType=controls:SftpBrowserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Padding="6,2"
                                                   Margin="0,0,4,0"
                                                   Visibility="{Binding ShowRetryButton, Converter={StaticResource BoolToVisibilityConverter}}" />

                                        <ui:Button Icon="{ui:SymbolIcon Dismiss16}"
                                                   ToolTip="Cancel Transfer"
                                                   Command="{Binding DataContext.CancelTransferCommand, RelativeSource={RelativeSource AncestorType=controls:SftpBrowserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Padding="4"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding ShowCancelButton, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <TextBlock Grid.Row="1"
                       Text="No active transfers"
                       FontSize="12"
                       Opacity="0.5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=invert}" />
        </Grid>
    </Border>
</UserControl>
