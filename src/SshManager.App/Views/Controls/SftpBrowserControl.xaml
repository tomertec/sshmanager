<UserControl x:Class="SshManager.App.Views.Controls.SftpBrowserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:controls="clr-namespace:SshManager.App.Views.Controls"
             xmlns:converters="clr-namespace:SshManager.App.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="700"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <converters:CollapsedWidthConverter x:Key="CollapsedWidthConverter" />

        <!-- Animated Progress Tooltip Style -->
        <Style x:Key="TransferProgressToolTipStyle" TargetType="ToolTip">
            <Setter Property="Background" Value="{ui:ThemeResource ApplicationBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{ui:ThemeResource ControlStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" />
                            </Border.Effect>
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <UserControl.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RefreshAllCommand}" />
        <KeyBinding Key="U" Modifiers="Ctrl" Command="{Binding UploadSelectedCommand}" />
        <KeyBinding Key="D" Modifiers="Ctrl" Command="{Binding DownloadSelectedCommand}" />
    </UserControl.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                CornerRadius="6"
                Padding="6"
                Margin="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Left: Connection Info with subtle status dot -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Connected state: green dot -->
                    <Ellipse Width="8" Height="8"
                             Fill="#2ECC71"
                             Margin="0,0,8,0"
                             VerticalAlignment="Center"
                             Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}"
                             ToolTip="Connected" />
                    <!-- Disconnected state: red dot -->
                    <Ellipse Width="8" Height="8"
                             Fill="#E74C3C"
                             Margin="0,0,8,0"
                             VerticalAlignment="Center"
                             Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                             ToolTip="Disconnected" />
                    <ui:SymbolIcon Symbol="Server24" FontSize="14" Margin="0,0,6,0" Opacity="0.7" />
                    <TextBlock Text="{Binding Hostname}"
                               FontWeight="SemiBold"
                               FontSize="13"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Center: Grouped Action Buttons -->
                <ScrollViewer Grid.Column="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              Margin="12,0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">

                        <!-- Navigation Group -->
                        <ui:Button Icon="{ui:SymbolIcon ArrowSync24}"
                                   ToolTip="Refresh All (F5)"
                                   Command="{Binding RefreshAllCommand}"
                                   Padding="8,5" />

                        <!-- Separator -->
                        <Border Width="1"
                                Background="{ui:ThemeResource ControlStrokeColorDefaultBrush}"
                                Opacity="0.3"
                                Margin="8,4" />

                        <!-- Transfer Group with Badge -->
                        <Grid Margin="0,0,4,0">
                            <ui:Button Icon="{ui:SymbolIcon ArrowUpload24}"
                                       Command="{Binding UploadSelectedCommand}"
                                       Appearance="Primary"
                                       Padding="8,5">
                                <ui:Button.ToolTip>
                                    <ToolTip Style="{StaticResource TransferProgressToolTipStyle}">
                                        <StackPanel MinWidth="220">
                                            <TextBlock Text="Upload Selected Files (Ctrl+U)"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,8" />

                                            <!-- Active Transfers Section - Only visible when transfers exist -->
                                            <Border Visibility="{Binding HasActiveTransfer, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                                    CornerRadius="4"
                                                    Padding="8"
                                                    Margin="0,4,0,0">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                        <ui:SymbolIcon Symbol="ArrowSync24" FontSize="14" Margin="0,0,6,0" />
                                                        <TextBlock Text="{Binding ActiveTransferCount, StringFormat='{}{0} Active Transfer(s)'}"
                                                                   FontWeight="Medium"
                                                                   FontSize="12" />
                                                    </StackPanel>

                                                    <!-- Transfer Items Preview -->
                                                    <ItemsControl ItemsSource="{Binding Transfers}" MaxHeight="120">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Margin="0,0,0,4">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="Auto" />
                                                                            <RowDefinition Height="Auto" />
                                                                        </Grid.RowDefinitions>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <!-- Direction indicator -->
                                                                        <TextBlock Grid.Column="0" Grid.RowSpan="2"
                                                                                   Text="{Binding DirectionDisplay}"
                                                                                   FontWeight="Bold"
                                                                                   VerticalAlignment="Center"
                                                                                   Margin="0,0,6,0">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Setter Property="Foreground" Value="#3498DB" />
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding DirectionDisplay}" Value="↑">
                                                                                            <Setter Property="Foreground" Value="#2ECC71" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>

                                                                        <!-- File name -->
                                                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                                                   Text="{Binding FileName}"
                                                                                   FontSize="11"
                                                                                   TextTrimming="CharacterEllipsis"
                                                                                   MaxWidth="150" />

                                                                        <!-- Status -->
                                                                        <TextBlock Grid.Row="0" Grid.Column="2"
                                                                                   Text="{Binding StatusDisplay}"
                                                                                   FontSize="10"
                                                                                   Opacity="0.7"
                                                                                   Margin="4,0,0,0" />

                                                                        <!-- Animated progress bar -->
                                                                        <ProgressBar Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                                                                     Value="{Binding Progress}"
                                                                                     Maximum="100"
                                                                                     Height="4"
                                                                                     Margin="0,2,0,0"
                                                                                     Background="#30FFFFFF">
                                                                            <ProgressBar.Style>
                                                                                <Style TargetType="ProgressBar">
                                                                                    <Setter Property="Foreground" Value="#3498DB" />
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding DirectionDisplay}" Value="↑">
                                                                                            <Setter Property="Foreground" Value="#2ECC71" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </ProgressBar.Style>
                                                                        </ProgressBar>
                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </ToolTip>
                                </ui:Button.ToolTip>
                            </ui:Button>
                        </Grid>

                        <Grid>
                            <ui:Button Icon="{ui:SymbolIcon ArrowDownload24}"
                                       Command="{Binding DownloadSelectedCommand}"
                                       Padding="8,5">
                                <ui:Button.ToolTip>
                                    <ToolTip Style="{StaticResource TransferProgressToolTipStyle}">
                                        <StackPanel MinWidth="220">
                                            <TextBlock Text="Download Selected Files (Ctrl+D)"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,8" />

                                            <!-- Active Transfers Section - Only visible when transfers exist -->
                                            <Border Visibility="{Binding HasActiveTransfer, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                                    CornerRadius="4"
                                                    Padding="8"
                                                    Margin="0,4,0,0">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                        <ui:SymbolIcon Symbol="ArrowSync24" FontSize="14" Margin="0,0,6,0" />
                                                        <TextBlock Text="{Binding ActiveTransferCount, StringFormat='{}{0} Active Transfer(s)'}"
                                                                   FontWeight="Medium"
                                                                   FontSize="12" />
                                                    </StackPanel>

                                                    <!-- Transfer Items Preview -->
                                                    <ItemsControl ItemsSource="{Binding Transfers}" MaxHeight="120">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Margin="0,0,0,4">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="Auto" />
                                                                            <RowDefinition Height="Auto" />
                                                                        </Grid.RowDefinitions>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <!-- Direction indicator -->
                                                                        <TextBlock Grid.Column="0" Grid.RowSpan="2"
                                                                                   Text="{Binding DirectionDisplay}"
                                                                                   FontWeight="Bold"
                                                                                   VerticalAlignment="Center"
                                                                                   Margin="0,0,6,0">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Setter Property="Foreground" Value="#3498DB" />
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding DirectionDisplay}" Value="↑">
                                                                                            <Setter Property="Foreground" Value="#2ECC71" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>

                                                                        <!-- File name -->
                                                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                                                   Text="{Binding FileName}"
                                                                                   FontSize="11"
                                                                                   TextTrimming="CharacterEllipsis"
                                                                                   MaxWidth="150" />

                                                                        <!-- Status -->
                                                                        <TextBlock Grid.Row="0" Grid.Column="2"
                                                                                   Text="{Binding StatusDisplay}"
                                                                                   FontSize="10"
                                                                                   Opacity="0.7"
                                                                                   Margin="4,0,0,0" />

                                                                        <!-- Animated progress bar -->
                                                                        <ProgressBar Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                                                                     Value="{Binding Progress}"
                                                                                     Maximum="100"
                                                                                     Height="4"
                                                                                     Margin="0,2,0,0"
                                                                                     Background="#30FFFFFF">
                                                                            <ProgressBar.Style>
                                                                                <Style TargetType="ProgressBar">
                                                                                    <Setter Property="Foreground" Value="#3498DB" />
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding DirectionDisplay}" Value="↑">
                                                                                            <Setter Property="Foreground" Value="#2ECC71" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </ProgressBar.Style>
                                                                        </ProgressBar>
                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </ToolTip>
                                </ui:Button.ToolTip>
                            </ui:Button>
                            <!-- Transfer Queue Badge -->
                            <Border Background="{ui:ThemeResource SystemFillColorCriticalBrush}"
                                    CornerRadius="8"
                                    MinWidth="16"
                                    Height="16"
                                    Padding="4,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,-4,-4,0"
                                    IsHitTestVisible="False"
                                    Visibility="{Binding HasActiveTransfer, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding ActiveTransferCount}"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                        </Grid>

                        <!-- Separator -->
                        <Border Width="1"
                                Background="{ui:ThemeResource ControlStrokeColorDefaultBrush}"
                                Opacity="0.3"
                                Margin="8,4" />

                        <!-- File Operations Group -->
                        <ui:DropDownButton Icon="{ui:SymbolIcon FolderAdd24}"
                                           ToolTip="New Folder"
                                           Padding="8,5"
                                           Margin="0,0,4,0">
                            <ui:DropDownButton.Flyout>
                                <ContextMenu>
                                    <ui:MenuItem Header="New Local Folder"
                                                 Icon="{ui:SymbolIcon Folder24}"
                                                 Command="{Binding ShowNewLocalFolderCommand}" />
                                    <ui:MenuItem Header="New Remote Folder"
                                                 Icon="{ui:SymbolIcon CloudAdd24}"
                                                 Command="{Binding ShowNewRemoteFolderCommand}" />
                                </ContextMenu>
                            </ui:DropDownButton.Flyout>
                        </ui:DropDownButton>

                        <ui:DropDownButton Icon="{ui:SymbolIcon Delete24}"
                                           ToolTip="Delete (Del)"
                                           Padding="8,5"
                                           Margin="0,0,4,0">
                            <ui:DropDownButton.Flyout>
                                <ContextMenu>
                                    <ui:MenuItem Header="Delete Local"
                                                 Icon="{ui:SymbolIcon Delete24}"
                                                 Command="{Binding DeleteLocalCommand}" />
                                    <ui:MenuItem Header="Delete Remote"
                                                 Icon="{ui:SymbolIcon CloudDismiss24}"
                                                 Command="{Binding DeleteRemoteCommand}" />
                                </ContextMenu>
                            </ui:DropDownButton.Flyout>
                        </ui:DropDownButton>

                        <ui:Button Icon="{ui:SymbolIcon LockClosed24}"
                                   ToolTip="Edit Permissions"
                                   Command="{Binding ShowPermissionsDialogCommand}"
                                   Padding="8,5" />

                        <!-- Separator -->
                        <Border Width="1"
                                Background="{ui:ThemeResource ControlStrokeColorDefaultBrush}"
                                Opacity="0.3"
                                Margin="8,4" />

                        <!-- Mirror Navigation Toggle -->
                        <ui:Button Command="{Binding ToggleMirrorNavigationCommand}"
                                   Padding="8,5">
                            <ui:Button.Style>
                                <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                    <Setter Property="ToolTip" Value="Enable Mirror Navigation - Sync local and remote folders" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMirrorNavigationEnabled}" Value="True">
                                            <Setter Property="ToolTip" Value="Disable Mirror Navigation" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:Button.Style>
                            <ui:SymbolIcon FontSize="16">
                                <ui:SymbolIcon.Style>
                                    <Style TargetType="ui:SymbolIcon">
                                        <Setter Property="Symbol" Value="ArrowSync24" />
                                        <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMirrorNavigationEnabled}" Value="True">
                                                <Setter Property="Foreground" Value="{ui:ThemeResource AccentTextFillColorPrimaryBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:SymbolIcon.Style>
                            </ui:SymbolIcon>
                        </ui:Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Right: Disconnect Button -->
                <ui:Button Grid.Column="2"
                           Icon="{ui:SymbolIcon PlugDisconnected24}"
                           ToolTip="Disconnect SFTP Session"
                           Command="{Binding DisconnectCommand}"
                           Appearance="Caution"
                           Padding="8,5" />
            </Grid>
        </Border>

        <!-- Dual-Pane File Browsers with Collapse Buttons -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Local Panel - animates to 0 when collapsed -->
                <ColumnDefinition Width="{Binding IsLocalPanelCollapsed, Converter={StaticResource CollapsedWidthConverter}}" />
                <!-- Collapse Left Button -->
                <ColumnDefinition Width="Auto" />
                <!-- Splitter -->
                <ColumnDefinition Width="Auto" />
                <!-- Collapse Right Button -->
                <ColumnDefinition Width="Auto" />
                <!-- Remote Panel - animates to 0 when collapsed -->
                <ColumnDefinition Width="{Binding IsRemotePanelCollapsed, Converter={StaticResource CollapsedWidthConverter}}" />
            </Grid.ColumnDefinitions>

            <!-- Local File Browser -->
            <controls:LocalFileBrowserControl x:Name="LocalBrowser"
                                              Grid.Column="0"
                                              DataContext="{Binding LocalBrowser}"
                                              Visibility="{Binding IsLocalPanelCollapsed, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                              FilesDroppedFromRemote="LocalBrowser_FilesDroppedFromRemote"
                                              DeleteRequested="LocalBrowser_DeleteRequested"
                                              EditRequested="LocalBrowser_EditRequested"
                                              UploadRequested="LocalBrowser_UploadRequested" />

            <!-- Collapse Local Panel Button -->
            <ui:Button Grid.Column="1"
                       Width="20"
                       Height="48"
                       Padding="0"
                       VerticalAlignment="Center"
                       Command="{Binding ToggleLocalPanelCommand}"
                       Background="Transparent"
                       BorderThickness="0"
                       Cursor="Hand">
                <ui:Button.ToolTip>
                    <ToolTip>
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Collapse Local Panel" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLocalPanelCollapsed}" Value="True">
                                            <Setter Property="Text" Value="Expand Local Panel" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </ToolTip>
                </ui:Button.ToolTip>
                <ui:SymbolIcon FontSize="12">
                    <ui:SymbolIcon.Style>
                        <Style TargetType="ui:SymbolIcon">
                            <Setter Property="Symbol" Value="ChevronLeft20" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLocalPanelCollapsed}" Value="True">
                                    <Setter Property="Symbol" Value="ChevronRight20" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ui:SymbolIcon.Style>
                </ui:SymbolIcon>
            </ui:Button>

            <!-- Splitter -->
            <GridSplitter Grid.Column="2"
                          Width="4"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent" />

            <!-- Collapse Remote Panel Button -->
            <ui:Button Grid.Column="3"
                       Width="20"
                       Height="48"
                       Padding="0"
                       VerticalAlignment="Center"
                       Command="{Binding ToggleRemotePanelCommand}"
                       Background="Transparent"
                       BorderThickness="0"
                       Cursor="Hand">
                <ui:Button.ToolTip>
                    <ToolTip>
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Collapse Remote Panel" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRemotePanelCollapsed}" Value="True">
                                            <Setter Property="Text" Value="Expand Remote Panel" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </ToolTip>
                </ui:Button.ToolTip>
                <ui:SymbolIcon FontSize="12">
                    <ui:SymbolIcon.Style>
                        <Style TargetType="ui:SymbolIcon">
                            <Setter Property="Symbol" Value="ChevronRight20" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRemotePanelCollapsed}" Value="True">
                                    <Setter Property="Symbol" Value="ChevronLeft20" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ui:SymbolIcon.Style>
                </ui:SymbolIcon>
            </ui:Button>

            <!-- Remote File Browser -->
            <controls:RemoteFileBrowserControl x:Name="RemoteBrowser"
                                               Grid.Column="4"
                                               DataContext="{Binding RemoteBrowser}"
                                               Visibility="{Binding IsRemotePanelCollapsed, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                               FilesDroppedFromLocal="RemoteBrowser_FilesDroppedFromLocal"
                                               DeleteRequested="RemoteBrowser_DeleteRequested"
                                               EditRequested="RemoteBrowser_EditRequested"
                                               DownloadRequested="RemoteBrowser_DownloadRequested" />
        </Grid>

        <!-- Transfer Progress Panel -->
        <controls:TransferProgressControl Grid.Row="2"
                                          DataContext="{Binding Transfers}"
                                          Visibility="{Binding Count, Converter={StaticResource CountToVisibilityConverter}}" />

        <!-- New Folder Dialog Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsNewFolderDialogVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                    CornerRadius="8"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="300">
                <StackPanel>
                    <TextBlock FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="New Local Folder" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsNewFolderRemote}" Value="True">
                                        <Setter Property="Text" Value="New Remote Folder" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Text="Folder Name"
                               FontSize="12"
                               Opacity="0.7"
                               Margin="0,0,0,4" />

                    <ui:TextBox x:Name="NewFolderNameTextBox"
                                PlaceholderText="Enter folder name"
                                Text="{Binding NewFolderName, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,16" />

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <ui:Button Content="Cancel"
                                   Command="{Binding CancelNewFolderCommand}"
                                   Padding="16,8"
                                   Margin="0,0,8,0" />
                        <ui:Button Content="Create"
                                   Appearance="Primary"
                                   Command="{Binding CreateNewFolderCommand}"
                                   Padding="16,8" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Overwrite Confirmation Dialog Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsOverwriteDialogVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                    CornerRadius="8"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="400"
                    MaxWidth="500">
                <StackPanel>
                    <!-- Header with icon -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <ui:SymbolIcon Symbol="Warning24"
                                       FontSize="24"
                                       Foreground="#F39C12"
                                       Margin="0,0,12,0" />
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Text="File Already Exists" />
                    </StackPanel>

                    <!-- Message -->
                    <TextBlock TextWrapping="Wrap"
                               Margin="0,0,0,8"
                               Opacity="0.9">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="A file with this name already exists in the destination folder:" />
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- File name -->
                    <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12,8"
                            Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Document24"
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           Opacity="0.7" />
                            <TextBlock Text="{Binding OverwriteFileName}"
                                       FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </Border>

                    <!-- Action description -->
                    <TextBlock Margin="0,0,0,16"
                               Opacity="0.7"
                               FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Do you want to replace the existing file?" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsOverwriteUpload}" Value="True">
                                        <Setter Property="Text" Value="Do you want to replace the existing remote file?" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Text="{Binding OverwriteSizeDisplay}"
                               FontSize="12"
                               Opacity="0.7"
                               Margin="0,0,0,12" />

                    <CheckBox Content="Apply to all remaining conflicts"
                              IsChecked="{Binding OverwriteApplyToAll}"
                              Margin="0,0,0,16" />

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <ui:Button Grid.Row="0" Grid.Column="0"
                                   Content="Overwrite"
                                   Icon="{ui:SymbolIcon ArrowSync24}"
                                   Command="{Binding ConfirmOverwriteCommand}"
                                   Appearance="Primary"
                                   HorizontalAlignment="Stretch"
                                   Padding="12,8"
                                   Margin="0,0,4,8" />

                        <ui:Button Grid.Row="0" Grid.Column="1"
                                   Content="Resume"
                                   Icon="{ui:SymbolIcon ArrowSync24}"
                                   Command="{Binding ResumeOverwriteCommand}"
                                   IsEnabled="{Binding OverwriteCanResume}"
                                   HorizontalAlignment="Stretch"
                                   Padding="12,8"
                                   Margin="4,0,0,8" />

                        <ui:Button Grid.Row="1" Grid.Column="0"
                                   Content="Keep Both"
                                   Icon="{ui:SymbolIcon Copy24}"
                                   Command="{Binding KeepBothOverwriteCommand}"
                                   HorizontalAlignment="Stretch"
                                   Padding="12,8"
                                   Margin="0,0,4,8" />

                        <ui:Button Grid.Row="1" Grid.Column="1"
                                   Content="Skip"
                                   Icon="{ui:SymbolIcon ArrowNext24}"
                                   Command="{Binding SkipOverwriteCommand}"
                                   HorizontalAlignment="Stretch"
                                   Padding="12,8"
                                   Margin="4,0,0,8" />

                        <ui:Button Grid.Row="2" Grid.ColumnSpan="2"
                                   Content="Cancel"
                                   Icon="{ui:SymbolIcon Dismiss24}"
                                   Command="{Binding CancelOverwriteCommand}"
                                   Appearance="Caution"
                                   HorizontalAlignment="Stretch"
                                   Padding="12,8" />
                    </Grid>
                </StackPanel>
            </Border>
        </Border>

        <!-- Permissions Dialog Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsPermissionsDialogVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                    CornerRadius="8"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="360"
                    MaxWidth="460">
                <StackPanel>
                    <TextBlock Text="Edit Permissions"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12" />

                    <TextBlock Text="{Binding PermissionsTargetName}"
                               FontSize="12"
                               Opacity="0.7"
                               Margin="0,0,0,8" />

                    <TextBlock Text="Current"
                               FontWeight="SemiBold"
                               Margin="0,0,0,4" />
                    <TextBlock Text="{Binding PermissionsCurrentDisplay}"
                               FontSize="12"
                               Opacity="0.8"
                               Margin="0,0,0,12" />

                    <TextBlock Text="New Permissions (octal)"
                               FontWeight="SemiBold"
                               Margin="0,0,0,4" />
                    <ui:TextBox PlaceholderText="755"
                                Text="{Binding PermissionsInput, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,8" />

                    <TextBlock Text="Use octal format like 644 or 755."
                               FontSize="11"
                               Opacity="0.6"
                               Margin="0,0,0,8" />

                    <TextBlock Text="{Binding PermissionsErrorMessage}"
                               Foreground="#E74C3C"
                               Visibility="{Binding PermissionsErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                               Margin="0,0,0,12" />

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <ui:Button Content="Cancel"
                                   Command="{Binding CancelPermissionsCommand}"
                                   Padding="16,8"
                                   Margin="0,0,8,0" />
                        <ui:Button Content="Apply"
                                   Appearance="Primary"
                                   Command="{Binding ApplyPermissionsCommand}"
                                   Padding="16,8" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Delete Confirmation Dialog Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsDeleteDialogVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                    CornerRadius="8"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="360"
                    MaxWidth="460">
                <StackPanel>
                    <!-- Header with warning icon -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <ui:SymbolIcon Symbol="Warning24"
                                       FontSize="24"
                                       Foreground="#E74C3C"
                                       Margin="0,0,12,0" />
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Text="Confirm Delete" />
                    </StackPanel>

                    <!-- Message -->
                    <TextBlock TextWrapping="Wrap"
                               Margin="0,0,0,8"
                               Opacity="0.9">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Are you sure you want to delete this item?" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDeleteRemote}" Value="True">
                                        <Setter Property="Text" Value="Are you sure you want to delete this remote item?" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Item name -->
                    <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12,8"
                            Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon FontSize="16"
                                           Margin="0,0,8,0"
                                           Opacity="0.7">
                                <ui:SymbolIcon.Style>
                                    <Style TargetType="ui:SymbolIcon">
                                        <Setter Property="Symbol" Value="Document24" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDeleteDirectory}" Value="True">
                                                <Setter Property="Symbol" Value="Folder24" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:SymbolIcon.Style>
                            </ui:SymbolIcon>
                            <TextBlock Text="{Binding DeleteTargetName}"
                                       FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </Border>

                    <!-- Directory warning -->
                    <Border Background="#30E74C3C"
                            CornerRadius="4"
                            Padding="12,8"
                            Margin="0,0,0,16"
                            Visibility="{Binding IsDeleteDirectory, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Warning24"
                                           FontSize="14"
                                           Foreground="#E74C3C"
                                           Margin="0,0,8,0" />
                            <TextBlock Text="This folder and all its contents will be permanently deleted."
                                       Foreground="#E74C3C"
                                       FontSize="12"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <!-- Warning message for files -->
                    <TextBlock Opacity="0.7"
                               FontSize="12"
                               Margin="0,0,0,16"
                               Visibility="{Binding IsDeleteDirectory, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                               Text="This action cannot be undone." />

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <ui:Button Content="Cancel"
                                   Command="{Binding CancelDeleteCommand}"
                                   Padding="16,8"
                                   Margin="0,0,8,0" />
                        <ui:Button Content="Delete"
                                   Appearance="Danger"
                                   Icon="{ui:SymbolIcon Delete24}"
                                   Command="{Binding ConfirmDeleteCommand}"
                                   Padding="16,8" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Error Message Banner -->
        <Border Grid.Row="0"
                Background="#E74C3C"
                CornerRadius="4"
                Padding="12,8"
                Margin="4"
                VerticalAlignment="Top"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ui:SymbolIcon Grid.Column="0"
                               Symbol="ErrorCircle24"
                               FontSize="16"
                               Foreground="White"
                               Margin="0,0,8,0" />

                <TextBlock Grid.Column="1"
                           Text="{Binding ErrorMessage}"
                           Foreground="White"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis" />

                <ui:Button Grid.Column="2"
                           Icon="{ui:SymbolIcon Dismiss24}"
                           Padding="4"
                           Background="Transparent"
                           Click="DismissError_Click" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
